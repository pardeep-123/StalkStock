<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ca_tv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_margin="@dimen/_20sdp"
    app:cardCornerRadius="@dimen/_12sdp"
    app:cardElevation="@dimen/_2sdp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">

            <ImageView
                android:id="@+id/iv_cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:src="@drawable/cross_green" />

            <com.stalkstock.utils.custom.TitiliumRegularTextView

                android:id="@+id/tv_order"
android:layout_below="@+id/iv_cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="5dp"

                android:text="Order ID : ADS777558"
                android:textColor="@color/black"
                android:textSize="22sp" />


            <com.stalkstock.utils.custom.TitiliumRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_cross"
                android:layout_toLeftOf="@id/tv_status"
                android:text="Status : "
                android:layout_marginTop="5dp"

                android:textSize="22sp"
                android:textColor="@color/black" />

            <com.stalkstock.utils.custom.TitiliumRegularTextView
                android:id="@+id/tv_status"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_below="@+id/iv_cross"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:textSize="22sp"
                android:text="Pending"
                android:textColor="@color/orange_colour" />

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:layout_below="@id/tv_order"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp">

                <ImageView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/subway" />

                <com.stalkstock.utils.custom.TitiliumRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="22sp"
                    android:text="10:30am, 20 June 2020"
                    android:textColor="@color/dark_gray" />
            </RelativeLayout>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/rl"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@color/black" />

            <LinearLayout
                android:id="@+id/ll_m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView

                                android:id="@+id/iv_locs"
                                android:layout_centerHorizontal="true"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:src="@drawable/location1" />

                            <com.stalkstock.utils.custom.TitiliumBoldTextView
                                android:id="@+id/tv_km"
                                android:layout_below="@+id/iv_locs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="9.5 Km"
                                android:layout_centerHorizontal="true"

                                android:textColor="@color/black"
                                android:textSize="22sp" />

                            <com.stalkstock.utils.custom.TitiliumRegularTextView

                                android:id="@+id/tv_av"
                                android:layout_below="@+id/tv_km"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_20sdp"
                                android:text="Away"
                                android:textSize="22sp"
                                android:textColor="@color/black" />

                            <View

                                android:layout_alignTop="@+id/tv_km"
                                android:layout_alignBottom="@+id/tv_av"
                                android:layout_alignParentRight="true"
                                android:layout_width="0.5dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:background="@android:color/darker_gray" />


                            <View
                                android:layout_marginTop="5dp"

                                android:layout_alignParentBottom="true"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@android:color/darker_gray"/>

                        </RelativeLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <ImageView
                                android:id="@+id/iv_doll"
                                android:layout_centerHorizontal="true"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:src="@drawable/dollar" />

                            <com.stalkstock.utils.custom.TitiliumBoldTextView
                                android:layout_below="@+id/iv_doll"
                                android:layout_centerHorizontal="true"

                                android:id="@+id/tv_pp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="$04.49"
                                android:textColor="@color/black"
                                android:textSize="22sp"/>

                            <com.stalkstock.utils.custom.TitiliumRegularTextView
                                android:layout_width="wrap_content"
                                android:layout_centerHorizontal="true"

                                android:layout_below="@+id/tv_pp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_20sdp"
                                android:text="Esti. Earn"
                                android:textSize="22sp"
                                android:textColor="@color/black" />


                            <View
                                android:layout_marginTop="5dp"

                                android:layout_alignParentBottom="true"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@android:color/darker_gray"/>


                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_25sdp">


                    <ImageView

                        android:id="@+id/iv_circle"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/radiobutton" />

                    <ImageView
                        android:id="@+id/iv_sub"
                        android:layout_toRightOf="@+id/iv_circle"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_20sdp"


                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/subway" />

                    <com.stalkstock.utils.custom.TitiliumRegularTextView
                        android:layout_toRightOf="@+id/iv_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_alignTop="@+id/iv_sub"
                        android:layout_alignBottom="@+id/iv_sub"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:text="8753, Mauricio Walks, Mohali Stadium"
                        android:textColor="@color/black"
                        android:textSize="22sp" />



                    <include
                        layout="@layout/line_layout"
                        android:id="@+id/views"
                        android:layout_alignLeft="@+id/iv_loc"

                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/iv_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/line" />


                    <ImageView
                        android:id="@+id/iv_loc"
                        android:layout_below="@+id/views"
                        android:tint="@color/black"
                        android:layout_marginTop="-10dp"

                        android:layout_alignLeft="@+id/iv_circle"
                        android:layout_alignRight="@+id/iv_circle"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:src="@drawable/location_icon" />

                    <com.stalkstock.utils.custom.TitiliumRegularTextView
                        android:layout_toRightOf="@+id/iv_loc"
                        android:layout_alignTop="@+id/iv_loc"
                        android:layout_alignBottom="@+id/iv_loc"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:text="8753, Mauricio Walks, Mohali Stadium"
                        android:textColor="@color/black"
                        android:textSize="22sp"  />


                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp">

                    <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/map" />

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/location_dam" />
                </RelativeLayout>
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_pro"
                android:layout_below="@id/ll_m"
                android:layout_marginTop="10dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="50dp"
                    android:layout_centerVertical="true"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/chat_img_1" />


                <RelativeLayout

                    android:layout_toRightOf="@id/iv_profile"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.stalkstock.utils.custom.TitiliumBoldTextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:text="Allen Chander "
                        android:textColor="@color/black"
                        android:textSize="22sp"  />

                    <com.stalkstock.utils.custom.TitiliumRegularTextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_name"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:text="8753, Mauricio Walks, Mohali Stadium"
                        android:textColor="@color/black"
                        android:textSize="22sp" />
                </RelativeLayout>

            </RelativeLayout>


            <com.stalkstock.utils.custom.TitiliumBoldTextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_pro"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Ratings"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="22sp"  />

            <RelativeLayout
                android:id="@+id/rl_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_rating"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/strokegray1">

                <ImageView
                    android:id="@+id/iv_star"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:src="@drawable/ic_star_black_24dp"
                    app:tint="@color/dark_gray" />

                <com.stalkstock.utils.custom.TitiliumRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_star"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="You Have not been rated by this user yet"
                    android:textColor="@color/dark_gray"
                    android:textSize="22sp"  />

            </RelativeLayout>


            <com.stalkstock.utils.custom.TitiliumBoldButton
                android:id="@+id/btn_signup"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/rl_rate"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/btn_shape"
                android:gravity="center"

                android:text="@string/finish_job"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="17sp" />


        </RelativeLayout>
    </ScrollView>


</androidx.cardview.widget.CardView>