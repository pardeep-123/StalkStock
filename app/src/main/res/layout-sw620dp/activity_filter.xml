<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitEnd"
        android:src="@drawable/bg_fit" />

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <com.stalkstock.utils.custom.TitiliumBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Filters"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="Reset"
            android:visibility="gone"
            android:textColor="@color/light_grey2" />

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/toolbar"
        android:background="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view"
        android:orientation="vertical">

        <com.stalkstock.utils.custom.TitiliumBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="SORT BY TAGS"
            android:textColor="@color/dark_gray"
            android:textSize="17sp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recy_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="4"
            tools:listitem="@layout/row_filter" />


        <com.stalkstock.utils.custom.TitiliumSemiBoldTextView
            android:id="@+id/tv_sort_cate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="SORT BY CATEGORY"
            android:textColor="@color/dark_gray"
            android:textSize="17sp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_sort_cate"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/edittextshape">

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:entries="@array/Select_Category"
                    android:gravity="center_vertical"
                    android:hint="Select Category"
                    android:paddingStart="15dp"
                    android:paddingEnd="20dp"
                    android:text="Select Category"
                    android:textColorHint="@color/dark_gray"
                    android:textSize="15dp"

                    />

            </RelativeLayout>

            <com.stalkstock.utils.custom.TitiliumBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:text="Select Category"
                android:textColor="@color/light_grey"
                android:textSize="14dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <com.stalkstock.utils.custom.TitiliumBoldTextView
            android:id="@+id/tvSortBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="SORT BY "
            android:textColor="@color/dark_gray"
            android:textSize="17sp" />

        <RelativeLayout
            android:id="@+id/rlCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">

            <com.stalkstock.utils.custom.TitiliumRegularTextView
                android:id="@+id/txtHighToLow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Cost High to Low "
                android:textColor="@color/green_colour" />

            <ImageView
                android:id="@+id/imgHighToLOw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/check_icon" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@color/dark_gray" />

        <RelativeLayout
            android:id="@+id/ltLowToHigh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">

            <com.stalkstock.utils.custom.TitiliumRegularTextView
                android:id="@+id/txtLowToHigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Cost Low to High"
                android:textColor="@color/dark_gray" />

            <ImageView
                android:id="@+id/imgLowToHigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/check_icon"
                android:visibility="gone" />

        </RelativeLayout>

        <com.stalkstock.utils.custom.TitiliumBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:text="PRICE"
            android:textColor="@color/dark_gray"
            android:textSize="17sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="@dimen/_10sdp">

            <com.stalkstock.utils.custom.TitiliumBoldTextView
                android:id="@+id/tv_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <com.stalkstock.utils.custom.TitiliumBoldTextView
                android:id="@+id/tv_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="$1000"
                android:textColor="@color/black"
                android:textSize="17sp" />
        </RelativeLayout>


        <com.google.android.material.slider.RangeSlider
            android:id="@+id/rangePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:theme="@style/MyMaterialTheme"
            android:valueFrom="0"
            android:valueTo="1000"
            app:labelBehavior="gone"
            app:thumbColor="@color/white"
            app:thumbElevation="5dp"
            app:thumbRadius="9dp"
            app:thumbStrokeColor="@color/white"
            app:thumbStrokeWidth="6dp"
            app:trackHeight="5dp"
            app:values="@array/initial_slider_values" />


        <!--  <com.innovattic.rangeseekbar.RangeSeekBar
              android:id="@+id/rangeSeekBar"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:backgroundTint="@android:color/transparent"
              app:rsb_max="1000"
              android:layout_marginStart="@dimen/_10sdp"
              android:layout_marginEnd="@dimen/_10sdp"
              app:rsb_maxThumbDrawable="@drawable/custom_switch"
              app:rsb_minRange="0"
              app:rsb_sidePadding="0dp"
              android:overScrollMode="never"
              app:rsb_minThumbDrawable="@drawable/custom_switch"
              app:rsb_trackColor="@color/dark_gray"
              app:rsb_trackSelectedColor="@color/green_colour"
              app:rsb_trackSelectedThickness="@dimen/_3sdp"
              app:rsb_trackThickness="@dimen/_3sdp"
              />-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:weightSum="2">

        <com.stalkstock.utils.custom.TitiliumBoldTextView
            android:id="@+id/btn_clear"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/strokegray"
            android:gravity="center"
            android:text="Clear"
            android:textAllCaps="false"
            android:textColor="@color/dark_gray"
            android:textSize="15sp" />

        <View
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_10sdp" />

        <com.stalkstock.utils.custom.TitiliumBoldButton
            android:id="@+id/btn_apply"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_shape"
            android:gravity="center"
            android:text="Apply"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>