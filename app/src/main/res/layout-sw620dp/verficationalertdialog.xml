<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/white_radius_popup">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/verify_alert"
        android:layout_height="wrap_content"
        android:orientation="vertical"
         tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/verifyset"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:src="@drawable/new_icon"
                app:civ_border_color="#8C8D8E"
                app:civ_border_overlay="true"
                app:civ_border_width="1dp" />

        </RelativeLayout>
        <com.stalkstock.utils.custom.TitiliumBoldTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Let's add your business"
            android:textColor="#000"
            android:gravity="center"
            android:layout_gravity="center"
             android:textSize="22sp">
        </com.stalkstock.utils.custom.TitiliumBoldTextView>
        <com.stalkstock.utils.custom.TitiliumBoldButton
            android:id="@+id/verify_continuebutton"
            android:layout_width="270dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:textAllCaps="false"
            android:text="Continue"
            android:textColor="#fff"
            android:textSize="17dp"
            android:background="@drawable/btn_shape"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>