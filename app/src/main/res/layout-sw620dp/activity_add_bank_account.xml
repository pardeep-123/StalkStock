<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
     >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_fit"
        android:layout_alignParentRight="true"
        android:scaleType="fitEnd"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/ivBack"                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:src="@drawable/back_arrow" />

                <com.stalkstock.utils.custom.TitiliumBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Add Bank Account"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="vertical">

                <com.stalkstock.utils.custom.TitiliumBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name on Account"
                    android:textSize="14sp"
                    android:textColor="@color/light_grey" />
                <com.stalkstock.utils.custom.TitiliumBoldEditText
                    android:id="@+id/etAccountName"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:hint="Enter name on account"
                    android:textColorHint="@color/light_grey"
                    android:paddingLeft="@dimen/_10sdp"
                    android:inputType="text"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:background="@drawable/shape_edit_new_home"/>

                <com.stalkstock.utils.custom.TitiliumBoldTextView
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name of Bank"
                    android:textSize="14sp"
                    android:textColor="@color/light_grey" />
                <com.stalkstock.utils.custom.TitiliumBoldEditText
                    android:id="@+id/etBankName"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:inputType="text"
                    android:hint="Enter name of bank"
                    android:textColorHint="@color/light_grey"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:background="@drawable/shape_edit_new_home">
                </com.stalkstock.utils.custom.TitiliumBoldEditText>

                <com.stalkstock.utils.custom.TitiliumBoldTextView
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Routing Number"
                    android:textSize="14sp"
                    android:textColor="@color/light_grey" />
                <com.stalkstock.utils.custom.TitiliumBoldEditText
                    android:id="@+id/etRoutingNumber"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:hint="Enter routing number"
                    android:textColorHint="@color/light_grey"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:textColor="#000"
                    android:background="@drawable/shape_edit_new_home">
                </com.stalkstock.utils.custom.TitiliumBoldEditText>

                <com.stalkstock.utils.custom.TitiliumBoldTextView
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bank Account"
                    android:textColor="@color/light_grey"
                    android:textSize="14sp" />
                <com.stalkstock.utils.custom.TitiliumBoldEditText
                    android:id="@+id/etBankAccount"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:hint="Enter bank account"
                    android:textSize="14sp"
                    android:textColorHint="@color/light_grey"
                    android:inputType="number"
                    android:textColor="#000"
                    android:background="@drawable/shape_edit_new_home">

                </com.stalkstock.utils.custom.TitiliumBoldEditText>

                <com.stalkstock.utils.custom.TitiliumBoldTextView
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:text="@string/confirm_bank_account"
                    android:textColor="@color/light_grey" />
                <com.stalkstock.utils.custom.TitiliumBoldEditText
                    android:id="@+id/etCnfBankAccount"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:textColorHint="@color/light_grey"
                    android:hint="@string/confirm_bank_account2"
                    android:inputType="number"
                    android:background="@drawable/shape_edit_new_home">
                </com.stalkstock.utils.custom.TitiliumBoldEditText>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp">

                    <com.stalkstock.utils.custom.TitiliumBoldButton
                        android:id="@+id/btnSave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:background="@drawable/buttonshape"
                        android:text="Save"
                        android:minHeight="45dp"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="16sp" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>