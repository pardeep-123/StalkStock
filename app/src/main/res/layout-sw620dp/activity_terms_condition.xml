<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".utils.TermsConditionActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:scaleType="fitEnd"
        android:src="@drawable/bg_fit" />
    <RelativeLayout
        android:id="@+id/toollll"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <com.stalkstock.utils.custom.TitiliumBoldTextView
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms &amp; Conditions"
            android:layout_centerInParent="true"
            android:textColor="@android:color/black"
            />

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="@dimen/value_40dp"
            android:layout_height="@dimen/value_40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/backk" />

    </RelativeLayout>

    <View
        android:id="@+id/ssd"
        android:layout_below="@+id/toollll"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey"/>


    <ScrollView
        android:layout_below="@+id/ssd"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:textSize="14dp" />


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>