<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.stalkstock.utils.custom.TitiliumBoldTextView
        android:id="@+id/tvProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/value_16sp"
        android:text=""/>

    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/ratingProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stepSize="0.5"
        android:numStars="5"
        android:scaleY="0.8"
        android:scaleX="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProduct"
        android:layout_marginTop="@dimen/_10sdp"/>


    <com.stalkstock.utils.custom.TitiliumBoldButton
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_20sdp"
        android:background="@drawable/buttonshape"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="#fff"
        app:layout_constraintTop_toTopOf="@id/ratingProduct"
        app:layout_constraintBottom_toBottomOf="@id/ratingProduct"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ratingProduct"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:textSize="12sp" />

</androidx.constraintlayout.widget.ConstraintLayout>