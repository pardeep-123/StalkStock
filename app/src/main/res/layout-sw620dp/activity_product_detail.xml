<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:scaleType="fitEnd"
        android:src="@drawable/bg_fit" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                 tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/product_backarrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:src="@drawable/back_arrow"></ImageView>

                <com.stalkstock.utils.custom.TitiliumBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Product Details"
                    android:textColor="#000"
                    android:textSize="20sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                 android:background="@color/dark_gray"></View>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/adduploadimages"
                            android:layout_width="match_parent"
                            android:layout_height="350dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/product_img"></ImageView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <com.stalkstock.utils.custom.TitiliumRegularTextView
                                android:id="@+id/product_brand"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Brand"
                                android:textColor="#494848"
                                android:textSize="22sp" />

                            <com.stalkstock.utils.custom.TitiliumBoldTextView
                                android:id="@+id/product_Bacongrill"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:text="Bacon Grill"
                                android:textColor="#000"
                                android:textSize="22sp"></com.stalkstock.utils.custom.TitiliumBoldTextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="2">

                            <com.stalkstock.utils.custom.TitiliumRegularTextView
                                android:id="@+id/businessname1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Tags"
                                android:textColor="#494848"
                                android:textSize="22sp"></com.stalkstock.utils.custom.TitiliumRegularTextView>

                            <com.stalkstock.utils.custom.TitiliumBoldTextView
                                android:id="@+id/businessnamee1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:text="Halal"
                                android:textColor="#000"
                                android:textSize="22sp"></com.stalkstock.utils.custom.TitiliumBoldTextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="2">

                            <com.stalkstock.utils.custom.TitiliumRegularTextView
                                android:id="@+id/businessemail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Product Name"
                                android:textColor="#494848"
                                android:textSize="22sp"></com.stalkstock.utils.custom.TitiliumRegularTextView>

                            <com.stalkstock.utils.custom.TitiliumBoldTextView
                                android:id="@+id/businessemailid"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:text="Beef Fresh Meat"
                                android:textColor="#000"
                                android:textSize="22sp"></com.stalkstock.utils.custom.TitiliumBoldTextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp">

                            <com.stalkstock.utils.custom.TitiliumRegularTextView
                                android:id="@+id/businessmobilenuber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Country of Origin"
                                android:textColor="#494848"
                                android:textSize="22sp"></com.stalkstock.utils.custom.TitiliumRegularTextView>

                            <com.stalkstock.utils.custom.TitiliumBoldTextView
                                android:id="@+id/businessmobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:text="Brompton"
                                android:textColor="#000"
                                android:textDirection="ltr"
                                android:textSize="22sp"></com.stalkstock.utils.custom.TitiliumBoldTextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="2">

                            <com.stalkstock.utils.custom.TitiliumRegularTextView
                                android:id="@+id/businesstelephone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Unit of Measurement"
                                android:textColor="#494848"
                                android:textSize="22sp"></com.stalkstock.utils.custom.TitiliumRegularTextView>

                            <com.stalkstock.utils.custom.TitiliumBoldTextView
                                android:id="@+id/businesstelephonenumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:text="gm"
                                android:textColor="#000"
                                android:textSize="22sp"></com.stalkstock.utils.custom.TitiliumBoldTextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="2">

                            <com.stalkstock.utils.custom.TitiliumRegularTextView
                                android:id="@+id/businesswebsite"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Add Price"
                                android:textColor="#494848"
                                android:textSize="22sp"></com.stalkstock.utils.custom.TitiliumRegularTextView>

                            <com.stalkstock.utils.custom.TitiliumBoldTextView
                                android:id="@+id/businesswebsitename"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:text="$9.50"
                                android:textColor="#000"
                                android:textSize="22sp"></com.stalkstock.utils.custom.TitiliumBoldTextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp">

                            <com.stalkstock.utils.custom.TitiliumRegularTextView
                                android:id="@+id/businessaddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Product Description"
                                android:textColor="#494848"
                                android:textSize="22sp"></com.stalkstock.utils.custom.TitiliumRegularTextView>

                            <com.stalkstock.utils.custom.TitiliumBoldTextView
                                android:id="@+id/businesscity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:text="Lorem ipsum dolor sit amet,consectetur adipiscing elit,sed do eiusmod tempor."
                                android:textColor="#000"
                                android:textDirection="ltr"
                                android:textSize="22sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:layout_weight="2">

                            <com.stalkstock.utils.custom.TitiliumRegularTextView
                                android:id="@+id/businesstype"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Availability"
                                android:textColor="#494848"
                                android:textSize="22sp"></com.stalkstock.utils.custom.TitiliumRegularTextView>

                            <com.stalkstock.utils.custom.TitiliumBoldTextView
                                android:id="@+id/businesstypes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:text="Available"
                                android:textColor="#000"
                                android:textSize="22sp"/>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="120dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginBottom="20dp">



                                <LinearLayout
                                    android:layout_centerHorizontal="true"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"
                            >

                                    <com.stalkstock.utils.custom.TitiliumBoldButton
                                        android:id="@+id/edit_btn"
                                        android:layout_width="200dp"
                                        android:layout_height="60dp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:background="@drawable/btn_shape"
                                         android:text="Edit"
                                        android:textAllCaps="false"
                                        android:textColor="#fff"
                                        android:layout_marginBottom="20dp"
                                        android:textSize="17sp"/>

                                    <com.stalkstock.utils.custom.TitiliumBoldButton
                                        android:id="@+id/delete_btn"
                                        android:layout_width="200dp"

                                        android:layout_height="60dp"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                         android:background="@drawable/edittextshape"
                                        android:text="Delete"
                                        android:layout_marginBottom="20dp"
                                        android:textAllCaps="false"
                                        android:textColor="#8BC34A"
                                        android:textSize="17sp"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>