<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitEnd"
        android:src="@drawable/bg_fit"
        android:layout_alignParentRight="true" />

    <RelativeLayout
        android:id="@+id/top12"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/back_arrow"
            android:padding="10dp"

            android:layout_marginLeft="10dp"
            />
        <com.stalkstock.utils.custom.TitiliumBoldTextView
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details"

            android:textColor="@color/black"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/fillter"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/search_icon_new"/>
        <ImageView
            android:id="@+id/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/notification_icon1"
            android:layout_toLeftOf="@+id/search"

            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
             />

        <ImageView
            android:id="@+id/fillter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/filter_icn1"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/view12"
        android:layout_below="@+id/top12"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/light_grey"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsc_top"
        android:layout_below="@+id/view12"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/ad_img_2"
                android:scaleType="centerCrop"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:layout_marginTop="10dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-40dp"
                android:layout_marginRight="75dp"
                android:layout_marginLeft="75dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@drawable/background_box_white1"

                    android:orientation="vertical"
                    >
                    <RelativeLayout
                        android:id="@+id/top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                        <ImageView
                            android:id="@+id/img"
                            android:layout_width="65dp"
                            android:layout_height="50dp"
                            android:src="@drawable/mc_img"/>

                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:id="@+id/kfc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/img"
                            android:layout_marginLeft="10dp"
                            android:text="McDonald's"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            />
                        <com.stalkstock.utils.custom.TitiliumRegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/kfc"
                            android:layout_toRightOf="@+id/img"
                            android:layout_marginLeft="10dp"
                            android:text="New York, USA"/>


                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/light_grey"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:id="@+id/rl_ra"
                            android:layout_marginLeft="23dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RatingBar
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/star"
                                android:layout_centerVertical="true"
                                android:progressTint="@color/yellow"
                                android:progressBackgroundTint="@color/yellow"
                                android:rating="5"
                                android:numStars="5"
                                style="?android:attr/ratingBarStyleSmall"/>

                            <com.stalkstock.utils.custom.TitiliumRegularTextView
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/star"
                                android:id="@+id/name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5.0 Rating. 500+"
                                android:textSize="14sp"
                                android:layout_marginLeft="10dp"
                                />

                        </RelativeLayout>
                        <com.stalkstock.utils.custom.TitiliumRegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="45 Minutes (Delivery time)"
                            android:layout_marginLeft="25dp"
                            android:layout_below="@+id/rl_ra"
                            android:textSize="14sp"

                            android:layout_marginTop="5dp"/>


                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/productdetails_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:nestedScrollingEnabled="false"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
