<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/messagelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_border"

        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/bidproductitem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.stalkstock.utils.custom.TitiliumSemiBoldTextView
                    android:id="@+id/requestid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="25sp"
                    android:layout_alignParentLeft="true"
                    android:text="Request Id: #123456"/>
                <LinearLayout
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:background="@drawable/bidbackground"
                    android:layout_alignParentRight="true"
                    android:gravity="center_horizontal"
                    >
                <com.stalkstock.utils.custom.TitiliumRegularTextView
                    android:id="@+id/bidid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:layout_gravity="center_vertical"

                    android:text="BID:9"
                    android:textColor="#fff"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.stalkstock.utils.custom.TitiliumRegularTextView
                android:id="@+id/biddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="22sp"
                 android:text="June 10, 2020"/>
                <View

                    android:layout_alignTop="@+id/biddate"
                    android:layout_alignBottom="@+id/biddate"
                    android:id="@+id/view_gdsd"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/biddate"
                    android:layout_width="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5sp"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"
                      />
                <com.stalkstock.utils.custom.TitiliumRegularTextView
                    android:id="@+id/bidtime"
                    android:layout_toRightOf="@+id/view_gdsd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:layout_marginLeft="@dimen/_5sdp"
                    android:textSize="22sp"
                     android:text="3:30"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>