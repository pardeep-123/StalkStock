                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/etSearch"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15sp"
                    android:layout_marginLeft="15sp"

                    android:background="@drawable/shape_edit_new_home"
                    android:layout_height="70dp">

                    <ImageView
                        android:id="@+id/search"
                        android:paddingLeft="12dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/search_icon"/>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"

                        android:paddingRight="12dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/audio_icon"/>

                    <com.stalkstock.utils.custom.TitiliumRegularTextView

                        android:layout_toRightOf="@+id/search"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_gravity="center"
                        android:layout_marginRight="12dp"
                        android:textSize="22sp"
                        android:hint="Search.."
                        />

                </RelativeLayout>

                <com.stalkstock.utils.custom.TitiliumSemiBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All Categories"
                     android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColor="#000"
                    android:textSize="22sp"></com.stalkstock.utils.custom.TitiliumSemiBoldTextView>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >


                        <com.stalkstock.utils.custom.TitiliumRegularTextView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center"
                            android:text="meet"
                            android:background="#EFECEC"
                            android:textColor="#8BC34A"
                            android:textSize="20sp"
                        />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="@dimen/_40sdp"
                            android:layout_gravity="top"
                            android:src="@drawable/cross_icon"></ImageView>


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >


                        <com.stalkstock.utils.custom.TitiliumRegularTextView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center"
                            android:text="Dairy"
                            android:background="#EFECEC"
                            android:textColor="#8BC34A"
                            android:textSize="20sp"
                            ></com.stalkstock.utils.custom.TitiliumRegularTextView>
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="@dimen/_40sdp"
                            android:layout_gravity="top"
                            android:src="@drawable/cross_icon"></ImageView>


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <com.stalkstock.utils.custom.TitiliumRegularTextView
                            android:id="@+id/tv_sea"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="Seafood Produce"
                            android:background="#EFECEC"
                            android:textColor="#8BC34A"
                            android:textSize="20sp" />

                        <ImageView
                            android:layout_toRightOf="@+id/tv_sea"
                            android:layout_width="35dp"
                            android:layout_marginLeft="-20dp"
                            android:layout_height="35dp"
                             android:layout_gravity="top"
                            android:src="@drawable/cross_icon"></ImageView>


                    </RelativeLayout>



                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>