<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitEnd"
        android:src="@drawable/bg_fit"
        android:layout_alignParentRight="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <com.stalkstock.utils.custom.TitiliumBoldTextView
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Details"
                android:layout_centerInParent="true"
                android:textColor="@android:color/black"
                />

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:id="@+id/arrowBack"
                android:layout_height="wrap_content"
                android:src="@drawable/back_arrow"
                android:layout_centerVertical="true"
                android:padding="10dp"/>

        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp">
                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="55dp"
                        android:layout_height="50dp"
                        android:src="@drawable/mc_img"/>

                    <com.stalkstock.utils.custom.TitiliumBoldTextView
                        android:id="@+id/kfc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/img"
                        android:layout_marginLeft="10dp"
                        android:text="McDonald's"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        />
                    <com.stalkstock.utils.custom.TitiliumRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/kfc"
                        android:textSize="22sp"
                        android:layout_toRightOf="@+id/img"
                        android:layout_marginLeft="10dp"
                        android:text="New York, USA"/>

                    <com.stalkstock.utils.custom.TitiliumBoldTextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:text="Pending"
                        android:textColor="@color/orange_colour"
                        android:textSize="22sp" />


                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginTop="20sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    />

                <com.stalkstock.utils.custom.TitiliumRegularTextView
                    android:id="@+id/tvText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Your order from KFC is on the way"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15sp"/>
                <com.stalkstock.utils.custom.TitiliumBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Order"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:textSize="25sp"
                    android:textColor="@color/black"

                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp">

                    <com.stalkstock.utils.custom.TitiliumRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item Total"
                        android:textSize="22sp" />
                    <com.stalkstock.utils.custom.TitiliumRegularTextView
                        android:id="@+id/tvItemTotal"
                        android:textSize="22sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/black"
                        android:text="$69.50"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp">
                    <com.stalkstock.utils.custom.TitiliumRegularTextView
                        android:textSize="22sp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="McDonald's Restaurant Charges"/>
                    <com.stalkstock.utils.custom.TitiliumRegularTextView
                        android:textSize="22sp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/black"
                        android:text="$5.50"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp">
                    <com.stalkstock.utils.custom.TitiliumRegularTextView
                        android:textSize="22sp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery Fee"/>
                    <com.stalkstock.utils.custom.TitiliumRegularTextView
                        android:textSize="22sp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/black"
                        android:text="$1.50"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp">
                    <com.stalkstock.utils.custom.TitiliumRegularTextView
                        android:textSize="22sp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hp Charges"/>
                    <com.stalkstock.utils.custom.TitiliumRegularTextView
                        android:textSize="22sp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/black"
                        android:text="$5.50"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp">
                    <com.stalkstock.utils.custom.TitiliumRegularTextView
                        android:textSize="22sp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery Charges"/>
                    <com.stalkstock.utils.custom.TitiliumRegularTextView
                        android:textSize="22sp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/black"
                        android:text="$4.50"
                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginTop="30sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp">
                    <com.stalkstock.utils.custom.TitiliumRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textSize="22sp"

                        android:textColor="@color/black"
                        />
                    <com.stalkstock.utils.custom.TitiliumRegularTextView
                        android:textSize="22sp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/black"
                        android:text="$4.50"
                        />
                </RelativeLayout>

                <com.stalkstock.utils.custom.TitiliumBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Details"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:textSize="25sp"
                    android:textColor="@color/black"

                    />

                <com.stalkstock.utils.custom.TitiliumRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="ORDER NUMBER"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"/>
                <com.stalkstock.utils.custom.TitiliumBoldTextView
                    android:textSize="22sp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"

                    android:text="123456789"/>

                <com.stalkstock.utils.custom.TitiliumRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="DATE"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"/>
                <com.stalkstock.utils.custom.TitiliumBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"

                    android:textSize="22sp"

                    android:text="MAY 1,2020 AT 04:07 PM"/>

                <com.stalkstock.utils.custom.TitiliumRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="DELIVERED BY"
                    android:textSize="25sp"

                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"/>
                <com.stalkstock.utils.custom.TitiliumBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:text="John Due"/>
                <com.stalkstock.utils.custom.TitiliumRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="DELIVERED TO"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"/>
                <com.stalkstock.utils.custom.TitiliumBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"

                    android:textSize="22sp"

                    android:layout_marginBottom="20sp"
                    android:text="43-D San Francisco,near church USA"/>



            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</RelativeLayout>
