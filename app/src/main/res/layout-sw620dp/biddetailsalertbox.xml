<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/_20sdp"
    android:layout_marginRight="@dimen/_20sdp"
    android:layout_marginTop="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_16sdp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/bitdetialsalert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
    <RelativeLayout
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        >
        <com.stalkstock.utils.custom.TitiliumBoldEditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittextshape"
            android:paddingLeft="15dp"
            android:hint="Enter your selling price"
            android:inputType="number"
             android:textColorHint="@color/light_grey"
            android:textSize="16sp"
            android:textColor="#000"/>
        <com.stalkstock.utils.custom.TitiliumBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp"
             android:textColor="@color/light_grey"
            android:background="#fff"
            android:text="Bid Amount"
            android:inputType="number"
            android:textSize="16sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
       >
        <com.stalkstock.utils.custom.TitiliumBoldEditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittextshape"
            android:paddingLeft="15dp"
            android:hint="Enter your terms of sale"
            android:inputType="textMultiLine"
             android:textColorHint="@color/light_grey"
            android:textSize="16sp"
            android:textColor="#000"/>
        <com.stalkstock.utils.custom.TitiliumBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp"
            android:background="#fff"
             android:textColor="@color/light_grey"
            android:text="Description"
            android:textSize="16sp"/>
    </RelativeLayout>
        <com.stalkstock.utils.custom.TitiliumBoldButton
            android:id="@+id/submitbutton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:textAllCaps="false"
            android:text="Submit"
            android:textColor="#fff"
            android:textSize="17sp"
            android:background="@drawable/btn_shape"
            >
        </com.stalkstock.utils.custom.TitiliumBoldButton>
    </LinearLayout>

</androidx.cardview.widget.CardView>