<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    android:background="@color/white"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_16sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_10sdp">

        <com.stalkstock.utils.custom.TitiliumBoldEditText
            android:id="@+id/edtSellingPrice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittextshape"
            android:hint="Enter your selling price"
            android:inputType="number"
            android:paddingLeft="15dp"
            android:textColor="#000"
            android:textColorHint="@color/light_grey"
            android:textSize="14sp" />

        <com.stalkstock.utils.custom.TitiliumBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp"
            android:background="#fff"
            android:inputType="number"
            android:text="Bid Amount"
            android:textColor="@color/light_grey"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/_10sdp">

        <com.stalkstock.utils.custom.TitiliumBoldEditText
            android:id="@+id/edtSellngDesc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittextshape"
            android:hint="Enter your terms of sale"
            android:inputType="textMultiLine"
            android:paddingLeft="15dp"
            android:textColor="#000"
            android:textColorHint="@color/light_grey"
            android:textSize="14sp" />

        <com.stalkstock.utils.custom.TitiliumBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp"
            android:background="#fff"
            android:text="Description"
            android:textColor="@color/light_grey"
            android:textSize="14sp" />
    </RelativeLayout>

    <com.stalkstock.utils.custom.TitiliumBoldButton
        android:id="@+id/submitbutton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_24sdp"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="@dimen/_14sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:background="@drawable/buttonshape"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="16sp" />

</LinearLayout>