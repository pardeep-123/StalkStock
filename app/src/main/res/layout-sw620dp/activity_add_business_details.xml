                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="5dp"
                        android:background="#fff"
                        android:text="Mobile"
                         android:textColor="@color/light_grey"

                        android:textSize="16sp"/>
                </RelativeLayout>
