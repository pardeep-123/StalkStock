<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="@dimen/_20sdp"
    android:layout_marginRight="@dimen/_20sdp"
    android:layout_marginTop="@dimen/_10sdp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="15dp"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/verifyset"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_logout_new"
                 />


        </RelativeLayout>
        <com.stalkstock.utils.custom.TitiliumRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are you sure you want to logout?"
            android:textColor="#4A4949"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="22sp">
        </com.stalkstock.utils.custom.TitiliumRegularTextView>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <com.stalkstock.utils.custom.TitiliumBoldButton
                android:id="@+id/logout_yesbtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/logoutshape"
                android:textAllCaps="false"
                android:text="No"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:textColor="#fff"
                android:textSize="22sp"
                android:layout_marginRight="@dimen/_5sdp"
                >

            </com.stalkstock.utils.custom.TitiliumBoldButton>
            <com.stalkstock.utils.custom.TitiliumBoldButton
                android:layout_weight="1"
                android:id="@+id/logout_nobtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textAllCaps="false"
                android:layout_alignParentRight="true"
                android:background="@drawable/buttonshape"
                android:layout_marginRight="30dp"
                android:text="Yes"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="22sp"
                >

            </com.stalkstock.utils.custom.TitiliumBoldButton>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>