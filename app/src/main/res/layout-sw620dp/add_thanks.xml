<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:scaleType="fitEnd"

        android:src="@drawable/bg_fit" />


    <ImageView
        android:id="@+id/iv_backArrow"
        android:layout_width="@dimen/value_40dp"
        android:layout_height="@dimen/value_40dp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="10dp"
        android:src="@drawable/backk" />

    <LinearLayout
        android:id="@+id/layoutBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnGo"
        android:layout_below="@+id/iv_backArrow"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_Congo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_40sdp"
            android:src="@drawable/confirm_icon" />

        <com.stalkstock.utils.custom.TitiliumBoldTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Thank You !"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textSize="18sp" />

        <com.stalkstock.utils.custom.TitiliumRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:text="Your request was sent successfully."
            android:textColor="@color/black"
            android:textSize="18sp" />

        <com.stalkstock.utils.custom.TitiliumRegularTextView
            android:id="@+id/tvRequestId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:text="Request Id:#1234567"

            android:textSize="18sp" />


    </LinearLayout>

    <com.stalkstock.utils.custom.TitiliumBoldButton
        android:id="@+id/btnGo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/btn_shape"
        android:gravity="center"
        android:text="Go to Home Page"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp" />


</RelativeLayout>