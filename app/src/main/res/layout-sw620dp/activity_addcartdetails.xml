<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitEnd"
        android:layout_alignParentRight="true"
        android:src="@drawable/bg_fit" />

    <RelativeLayout
        android:id="@+id/top12"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:src="@drawable/back_arrow" />

        <com.stalkstock.utils.custom.TitiliumBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Details"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/fillter"
            android:src="@drawable/search_icon_new" />

        <ImageView
            android:id="@+id/ivnotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/notification_icon1"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/search"
           />

        <ImageView
            android:id="@+id/fillter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/filter_icn1"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
             />
    </RelativeLayout>

    <View
        android:id="@+id/view1231"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/top12"
        android:background="@color/light_grey" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsc_top"
        android:layout_above="@+id/all"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view1231">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"

                android:layout_marginTop="10dp"
                 android:scaleType="centerCrop"
                android:src="@drawable/ad_img_2" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="75dp"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="-40dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@drawable/background_box_white1"

                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:id="@+id/img"
                            android:layout_width="65dp"
                            android:layout_height="50dp"
                            android:src="@drawable/mc_img" />

                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:id="@+id/kfc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/img"
                            android:text="McDonald's"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                              />

                        <com.stalkstock.utils.custom.TitiliumRegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/kfc"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/img"
                            android:text="New York, USA" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/light_grey" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <com.stalkstock.utils.custom.TitiliumRegularTextView
                            android:id="@+id/starCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:drawableLeft="@drawable/star_fill"
                            android:drawablePadding="10dp"
                            android:text="4.1 Rating. 500+"
                            android:textSize="14sp" />

                        <com.stalkstock.utils.custom.TitiliumRegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/starCount"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:text="45 Minutes (Delivery time)"

                            android:textSize="14sp" />


                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>



                <RelativeLayout
                    android:background="@drawable/item_border"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="55dp"
                    android:layout_marginRight="55dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content"
                     android:padding="10dp">

                    <ImageView
                        android:id="@+id/img1"

                        android:layout_alignTop="@+id/name1"
                        android:layout_width="135dp"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:layout_alignBottom="@+id/rls"
                        android:src="@drawable/product_img_1" />

                    <com.stalkstock.utils.custom.TitiliumBoldTextView
                        android:id="@+id/name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:includeFontPadding="false"
                        android:layout_toRightOf="@+id/img1"
                        android:text="Meat"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                          />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp"
                        android:src="@drawable/red_dot" />

                     <RatingBar
                        android:id="@+id/star"

                        android:layout_below="@+id/name1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:progressTint="@color/yellow"
                        android:progressBackgroundTint="@color/yellow"
                         android:layout_toRightOf="@+id/img1"
                        android:rating="5"
                        android:numStars="5"
                        style="?android:attr/ratingBarStyleSmall"/>


                    <com.stalkstock.utils.custom.TitiliumBoldTextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/star"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:includeFontPadding="false"
                        android:layout_toRightOf="@+id/img1"
                        android:text="Beef: $9.50/LB"
                        android:textColor="@android:color/black"
                        android:textSize="19sp"
                        />

                    <com.stalkstock.utils.custom.TitiliumRegularTextView
                        android:id="@+id/location_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/price"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:layout_toRightOf="@+id/img1"
                        android:drawableLeft="@drawable/green_location_arrow"
                        android:drawablePadding="5dp"
                        android:text="New York 920.." />

                    <RelativeLayout
                        android:id="@+id/rls"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/location_text"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/background_box_new"
                        android:textColor="@color/theme_green"

                        >

                        <com.stalkstock.utils.custom.TitiliumRegularTextView
                            android:id="@+id/minus"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:padding="4dp"
                            android:text="-"
                            android:textColor="@color/theme_green"
                            android:textSize="22sp" />

                        <com.stalkstock.utils.custom.TitiliumRegularTextView
                            android:id="@+id/count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:padding="4dp"
                            android:text="1"
                            android:textColor="@color/theme_green"
                            android:textSize="17sp" />

                        <com.stalkstock.utils.custom.TitiliumRegularTextView
                            android:id="@+id/plus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:padding="4dp"
                            android:text="+"
                            android:textColor="@color/theme_green"
                            android:textSize="22sp" />
                    </RelativeLayout>
                </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/productdetails_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <RelativeLayout
        android:id="@+id/all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:background="@drawable/drop_shadow_new"
        android:paddingTop="8dp"
        android:paddingBottom="12dp">

        <com.stalkstock.utils.custom.TitiliumRegularTextView
            android:id="@+id/item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="1 Item"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <View
            android:id="@+id/view123"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/item_count"
            android:background="@color/black" />

        <com.stalkstock.utils.custom.TitiliumBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/view123"
            android:text="Beef: $9.50/LB"
            android:textColor="@color/theme_green"
            android:textSize="22sp"
              />

        <com.stalkstock.utils.custom.TitiliumRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_count"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="22sp"
            android:text="Extra charges may apply" />

        <com.stalkstock.utils.custom.TitiliumBoldButton
            android:id="@+id/btnCheckOut"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_shape"
            android:paddingLeft="45dp"
            android:paddingTop="8dp"
            android:paddingRight="45dp"
            android:paddingBottom="8dp"
            android:textSize="17sp"
            android:text="checkout"
            android:textColor="@color/white" />

    </RelativeLayout>
</RelativeLayout>
