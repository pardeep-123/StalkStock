<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ca_tv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_margin="@dimen/_20sdp"
    app:cardCornerRadius="@dimen/_12sdp"
    app:cardElevation="@dimen/_2sdp"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">

            <ImageView
                android:id="@+id/iv_cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/cross_green" />

            <com.stalkstock.utils.custom.TitiliumRegularTextView
                android:id="@+id/tv_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_cross"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="Order ID : ADS777558"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

            <com.stalkstock.utils.custom.TitiliumRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_cross"
                android:layout_toStartOf="@id/tv_status"
                android:text="Status : "
                android:textSize="@dimen/_8sdp"
                android:textColor="@color/black" />

            <com.stalkstock.utils.custom.TitiliumRegularTextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_cross"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:text="Pending"
                android:textSize="@dimen/_8sdp"
                android:textColor="@color/orange_colour" />

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_order"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivShopLogo"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp" />

                <com.stalkstock.utils.custom.TitiliumRegularTextView
                    android:id="@+id/txtDatePopup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="10:30am, 20 June 2020"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_8sdp"
                    />

            </RelativeLayout>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/rl"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@color/black" />

            <LinearLayout
                android:id="@+id/ll_m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/location1" />



                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:id="@+id/txtKmAway"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="9.5 Km"
                            android:textColor="@color/black"
                            android:textSize="25sp" />

                        <com.stalkstock.utils.custom.TitiliumRegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:text="Away"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        android:background="@color/black" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/dollar" />

                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:id="@+id/txtEstEarning"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="$04.49"
                            android:textColor="@color/black"
                            android:textSize="25sp" />

                        <com.stalkstock.utils.custom.TitiliumRegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:text="Esti. Earn"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@color/black" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_25sdp">

                    <ImageView
                        android:id="@+id/iv_circle"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/radiobutton" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_sub"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/iv_circle" />

                    <com.stalkstock.utils.custom.TitiliumRegularTextView
                        android:id="@+id/txtRestLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/iv_circle"
                        android:layout_alignBottom="@+id/iv_circle"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/iv_sub"
                        android:text="8753, Mauricio Walks, Mohali Stadium"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <View
                        android:id="@+id/views"
                        android:layout_width="50dp"
                        android:layout_height="100dp"
                        android:layout_below="@+id/iv_circle"
                        android:layout_marginLeft="-18dp"
                        android:background="@drawable/line" />

                    <ImageView
                        android:id="@+id/iv_loc"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_below="@+id/views"
                        android:layout_alignStart="@+id/iv_circle"
                        android:layout_alignEnd="@+id/iv_circle"
                        android:src="@drawable/location_icon"
                        app:tint="@color/black" />

                    <com.stalkstock.utils.custom.TitiliumRegularTextView
                        android:id="@+id/txtDestinationLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/iv_loc"
                        android:layout_alignBottom="@+id/iv_loc"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_toEndOf="@+id/iv_loc"
                        android:gravity="center_vertical"
                        android:text="8753, Mauricio Walks, Mohali Stadium"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/map" />

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/location_dam" />
                </RelativeLayout>
            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@id/ll_m"
                android:layout_marginStart="@dimen/_10sdp"
                />

            <com.stalkstock.utils.custom.TitiliumBoldTextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_m"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toEndOf="@id/iv_profile"
                android:text="Allen Chander "
                android:textColor="@color/black"
                android:textSize="25sp" />

            <com.stalkstock.utils.custom.TitiliumRegularTextView
                android:id="@+id/txtAddressPopup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toEndOf="@id/iv_profile"
                android:text="8753, Mauricio Walks, Mohali Stadium"
                android:textColor="@color/black"
                android:textSize="@dimen/_8sdp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_profile"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.stalkstock.utils.custom.TitiliumBoldButton
                    android:id="@+id/btn_accept"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_shape"
                    android:gravity="center"
                    android:text="Accept"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <View
                     android:layout_width="@dimen/_20sdp"
                     android:layout_height="@dimen/_20sdp" />

                <com.stalkstock.utils.custom.TitiliumBoldButton
                    android:id="@+id/btn_decline"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/strokegreen"
                    android:gravity="center"
                    android:text="Decline"
                    android:textAllCaps="false"
                    android:textColor="@color/green_colour"
                    android:textSize="25sp" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>