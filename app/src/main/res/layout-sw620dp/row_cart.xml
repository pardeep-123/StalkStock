<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20sp">

        <RelativeLayout
            android:id="@+id/rlStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true">


            <ImageView
                android:id="@+id/img1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="10sp"
                android:src="@drawable/red_dot" />

            <com.stalkstock.utils.custom.TitiliumBoldTextView
                android:id="@+id/name_text"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_toRightOf="@+id/img1"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <com.stalkstock.utils.custom.TitiliumRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_text"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/img1"
                android:text="Regular" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="@dimen/_70sdp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_box_new"
            android:gravity="center_vertical"
            android:textColor="@color/theme_green"

            >

            <TextView
                android:id="@+id/minus"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:background="@drawable/ic_baseline_remove_24"
                android:backgroundTint="@color/green_colour"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@color/theme_green" />

            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="4dp"
                android:textColor="@color/theme_green"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/plus"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:background="@drawable/ic_baseline_add_24"
                android:backgroundTint="@color/green_colour"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@color/theme_green"
                android:textSize="12sp" />

        </RelativeLayout>

        <com.stalkstock.utils.custom.TitiliumBoldTextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="15sp"
            android:text="$9.50"
            android:textColor="@color/black"
            android:textSize="18sp" />


    </RelativeLayout>

</RelativeLayout>