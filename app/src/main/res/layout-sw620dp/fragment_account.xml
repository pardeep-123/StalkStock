<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".advertiser.fragments.AccountFragment">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitEnd"
        android:layout_alignParentRight="true"
        android:src="@drawable/bg_fit" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/toolbar2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/profile_grey"
            android:padding="10dp"
            >

            <LinearLayout
                android:id="@+id/rl_iv"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:gravity="center">

                <ImageView
                    android:id="@+id/ivUserImage"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/dummy_profile" />
            </LinearLayout>

            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/rl_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <com.stalkstock.utils.custom.TitiliumBoldTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jamie Row"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <com.stalkstock.utils.custom.TitiliumBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="jamie@gmail.com"
                    android:textColor="@color/light_grey"
                    android:textSize="22sp" />

                <com.stalkstock.utils.custom.TitiliumBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="123785768"
                    android:textColor="@color/light_grey"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout

                android:layout_alignParentRight="true"
                android:id="@+id/lin_editProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="end">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/edi_icon" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.stalkstock.utils.custom.TitiliumSemiBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="40dp"
                android:padding="15dp"
                android:layout_centerVertical="true"
                android:text="@string/notifications"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/toggle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/toggle_off" />

            <ImageView
                android:id="@+id/toggle_off2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_5sdp"
                android:src="@drawable/toggle_on"
                android:visibility="gone" />


<!--
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/toggle_off1"
                android:layout_marginRight="10dp" />
-->

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey" />

        <com.stalkstock.utils.custom.TitiliumSemiBoldTextView
            android:id="@+id/tv_business_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:padding="15dp"
            android:text="@string/business_profile"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey" />

        <com.stalkstock.utils.custom.TitiliumSemiBoldTextView
            android:id="@+id/tv_manage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:padding="15dp"
            android:text="@string/manage_payment_methods"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey" />

        <com.stalkstock.utils.custom.TitiliumSemiBoldTextView
            android:id="@+id/tv_changepass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:padding="15dp"
            android:text="@string/change_password"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey" />

        <com.stalkstock.utils.custom.TitiliumSemiBoldTextView
            android:id="@+id/tv_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:padding="15dp"
            android:text="@string/help"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey" />

        <com.stalkstock.utils.custom.TitiliumSemiBoldTextView
            android:id="@+id/tv_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:padding="15dp"
            android:text="@string/logout"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey" />
    </LinearLayout>

</RelativeLayout>