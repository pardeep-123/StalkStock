<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/accpetbid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bidproductshape"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.stalkstock.utils.custom.TitiliumSemiBoldTextView
                    android:id="@+id/requestid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Request Id: #123456"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bidbackground"
                    android:gravity="center_horizontal">

                    <com.stalkstock.utils.custom.TitiliumRegularTextView
                        android:id="@+id/bidCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="BID:9"

                        android:textColor="#fff"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.stalkstock.utils.custom.TitiliumRegularTextView
                    android:id="@+id/biddate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="June 10, 2020"/>

                <View

                    android:layout_alignTop="@+id/biddate"
                    android:layout_alignBottom="@+id/biddate"
                    android:id="@+id/view_gdsd"
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/biddate"

                    android:layout_width="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="5sp"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"
                    />

                <com.stalkstock.utils.custom.TitiliumRegularTextView
                    android:id="@+id/bidtime"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textSize="12sp"
                    android:text="3:30"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:layout_height="0.5dp"
            android:background="#BDBCBC"
            ></View>

        <LinearLayout
            android:id="@+id/messagelayout"
            android:elevation="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/bidimguser"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_dummy_img"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center">

                <com.stalkstock.utils.custom.TitiliumBoldTextView
                    android:id="@+id/bidusername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Jamie Jai"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <com.stalkstock.utils.custom.TitiliumBoldTextView
                    android:id="@+id/bidPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_toLeftOf="@+id/imgAccept"
                    android:text="$80.50"
                    android:textColor="#8BC34A"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imgAccept"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/check_circle" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>