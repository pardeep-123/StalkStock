<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/_4sdp"
    android:layout_marginEnd="@dimen/_4sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <View
            android:id="@+id/viewUp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black_color"
            />

        <View
            android:id="@+id/viewStart"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/black_color"
            />

        <View
            android:id="@+id/viewEnd"
            android:layout_width="0.5dp"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent"
            android:background="@color/black_color"
            />

        <View
            android:id="@+id/viewDown"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/black_color"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <RelativeLayout
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <com.stalkstock.utils.custom.TitiliumRegularTextView
                    android:id="@+id/tvSNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="1."
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/value_12sp" />

                <View
                    android:id="@+id/viewSNo"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@color/black_color" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <com.stalkstock.utils.custom.TitiliumRegularTextView
                    android:id="@+id/tvCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:maxLines="1"
                    android:text="Bacon Grill"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/value_12sp" />

                <View
                    android:id="@+id/viewQuantity"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@color/black_color" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <com.stalkstock.utils.custom.TitiliumRegularTextView
                    android:id="@+id/tvProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:maxLines="1"
                    android:text="Bacon Grill"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/value_12sp" />

                <View
                    android:id="@+id/viewyProduct"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@color/black_color"
                    />


            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <com.stalkstock.utils.custom.TitiliumRegularTextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="10"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/value_12sp" />


                <View
                    android:id="@+id/viewQuantityType"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@color/black_color"
                    />


            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <com.stalkstock.utils.custom.TitiliumRegularTextView
                    android:id="@+id/tvQuantityType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/value_12dp"
                    android:text="Kg"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/value_12dp" />

                <View
                    android:id="@+id/viewEdit"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@color/black_color" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>