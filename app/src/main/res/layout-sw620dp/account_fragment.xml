                        android:id="@+id/rl_iv"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imguser"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
