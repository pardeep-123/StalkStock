<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/ca_tv"
    app:cardElevation="@dimen/_2sdp"
    app:cardCornerRadius="@dimen/_12sdp"
    android:layout_margin="@dimen/_20sdp"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

              <ImageView
                  android:layout_marginRight="@dimen/_10sdp"
                  android:id="@+id/iv_crossi"
                  android:src="@drawable/cross_green"
                  android:layout_alignParentRight="true"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
            <com.stalkstock.utils.custom.TitiliumRegularTextView
                android:layout_below="@id/iv_crossi"
                android:layout_marginLeft="@dimen/_10sdp"

                android:id="@+id/tv_order"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:text="Order ID : ADS777558"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <com.stalkstock.utils.custom.TitiliumRegularTextView
                android:layout_below="@id/iv_crossi"
                android:layout_toLeftOf="@id/tv_status"
                android:textColor="@color/black"
                android:text="Status : "
                android:textSize="22sp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.stalkstock.utils.custom.TitiliumRegularTextView
                android:layout_below="@id/iv_crossi"
                android:layout_marginRight="@dimen/_10sdp"
                android:id="@+id/tv_status"
                android:layout_alignParentRight="true"
                android:textColor="@color/green_colour"
                android:text="@string/completed"
                android:textSize="22sp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:id="@+id/rl"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@id/tv_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:src="@drawable/subway"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_40sdp"/>
                <com.stalkstock.utils.custom.TitiliumRegularTextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/dark_gray"
                    android:text="10:30am, 20 June 2020"
                    android:textSize="22sp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <View
                android:layout_marginBottom="@dimen/_10sdp"
                android:id="@+id/line"
                android:layout_below="@id/rl"
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:id="@+id/ll_m"
                android:layout_below="@id/line"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView

                                android:id="@+id/iv_locs"
                                android:layout_centerHorizontal="true"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:src="@drawable/location1" />

                            <com.stalkstock.utils.custom.TitiliumBoldTextView
                                android:id="@+id/tv_km"
                                android:layout_below="@+id/iv_locs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="9.5 Km"
                                android:layout_centerHorizontal="true"

                                android:textColor="@color/black"
                                android:textSize="22sp" />

                            <com.stalkstock.utils.custom.TitiliumRegularTextView

                                android:id="@+id/tv_av"
                                android:layout_below="@+id/tv_km"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_20sdp"
                                android:text="Away"
                                android:textSize="22sp"
                                android:textColor="@color/black" />

                            <View

                                android:layout_alignTop="@+id/tv_km"
                                android:layout_alignBottom="@+id/tv_av"
                                android:layout_alignParentRight="true"
                                android:layout_width="0.5dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:background="@android:color/darker_gray" />


                            <View
                                android:layout_marginTop="5dp"

                                android:layout_alignParentBottom="true"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@android:color/darker_gray"/>

                        </RelativeLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <ImageView
                                android:id="@+id/iv_doll"
                                android:layout_centerHorizontal="true"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:src="@drawable/dollar" />

                            <com.stalkstock.utils.custom.TitiliumBoldTextView
                                android:layout_below="@+id/iv_doll"
                                android:layout_centerHorizontal="true"

                                android:id="@+id/tv_pp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="$04.49"
                                android:textColor="@color/black"
                                android:textSize="22sp"/>

                            <com.stalkstock.utils.custom.TitiliumRegularTextView
                                android:layout_width="wrap_content"
                                android:layout_centerHorizontal="true"

                                android:layout_below="@+id/tv_pp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_20sdp"
                                android:text="Esti. Earn"
                                android:textSize="22sp"
                                android:textColor="@color/black" />


                            <View
                                android:layout_marginTop="5dp"

                                android:layout_alignParentBottom="true"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@android:color/darker_gray"/>


                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_below="@id/rl"
                    android:background="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_25sdp">


                    <ImageView

                        android:id="@+id/iv_circle"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/radiobutton" />

                    <ImageView
                        android:id="@+id/iv_sub"
                        android:layout_toRightOf="@+id/iv_circle"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_20sdp"


                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/subway" />

                    <com.stalkstock.utils.custom.TitiliumRegularTextView
                        android:layout_toRightOf="@+id/iv_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_alignTop="@+id/iv_sub"
                        android:layout_alignBottom="@+id/iv_sub"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:text="8753, Mauricio Walks, Mohali Stadium"
                        android:textColor="@color/black"
                        android:textSize="22sp" />


                    <include
                        layout="@layout/line_layout"
                        android:id="@+id/views"
                        android:layout_alignLeft="@+id/iv_loc"

                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/iv_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/line" />


                    <ImageView
                        android:id="@+id/iv_loc"
                        android:layout_below="@+id/views"
                        android:tint="@color/black"
                        android:layout_alignLeft="@+id/iv_circle"
                        android:layout_alignRight="@+id/iv_circle"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_marginTop="-10dp"
                        android:layout_height="@dimen/_16sdp"
                        android:src="@drawable/location_icon" />

                    <com.stalkstock.utils.custom.TitiliumRegularTextView
                        android:layout_toRightOf="@+id/iv_loc"
                        android:layout_alignTop="@+id/iv_loc"
                        android:layout_alignBottom="@+id/iv_loc"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:text="8753, Mauricio Walks, Mohali Stadium"
                        android:textColor="@color/black"
                        android:textSize="22sp" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView

                        android:scaleType="centerCrop"
                        android:src="@drawable/map"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"/>
                    <ImageView
                        android:layout_centerInParent="true"
                        android:src="@drawable/location_dam"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"/>
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_below="@id/ll_m"

                android:layout_marginTop="15dp"
                android:id="@+id/rl_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/chat_img_1" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_profile">

                    <com.stalkstock.utils.custom.TitiliumBoldTextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:text="Allen Chander "
                        android:textColor="@color/black"
                        android:textSize="22sp" />

                    <com.stalkstock.utils.custom.TitiliumRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_name"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="10dp"
                        android:text="8753, Mauricio Walks, Mohali Stadium"
                        android:textColor="@color/black"
                        android:textSize="22sp" />


                </RelativeLayout>

            </RelativeLayout>


            <com.stalkstock.utils.custom.TitiliumBoldTextView
                android:id="@+id/tv_rating"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_below="@id/rl_profile"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:text="Ratings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:id="@+id/rl_profile2"
                android:layout_below="@id/tv_rating"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/iv_profile_user"

                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/chat_img_1" />

                <RelativeLayout
                    android:layout_toRightOf="@id/iv_profile_user"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <com.stalkstock.utils.custom.TitiliumBoldTextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:id="@+id/tv_nameuser"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:text="Allen Chander "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:layout_below="@id/tv_nameuser"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RatingBar
                            android:isIndicator="false"
                            android:theme="@style/RatingBar"
                            android:id="@+id/ratingbar"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:rating="5"

                            android:layout_centerVertical="true"
                            style="?android:attr/ratingBarStyleIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <com.stalkstock.utils.custom.TitiliumRegularTextView

                            android:textSize="22sp"
                            android:layout_marginLeft="8dp"

                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/ratingbar"
                            android:textColor="@color/black"
                            android:text="(5.0)"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </RelativeLayout>
                </RelativeLayout>


            </RelativeLayout>



            <com.stalkstock.utils.custom.TitiliumRegularTextView
                android:layout_marginBottom="60dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:textSize="20sp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_below="@id/rl_profile2"
                android:layout_centerVertical="true"
                android:textColor="@color/black"

                android:text="Lore texts are a way the community can contribute to the mod, by writing and submitting texts for players to find in the game."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>




        </RelativeLayout>
    </ScrollView>



</androidx.cardview.widget.CardView>