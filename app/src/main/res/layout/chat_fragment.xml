<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitEnd"
        android:src="@drawable/bg_fit"
        android:layout_alignParentRight="true" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                 tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/iv_back"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back_arrow"
                    android:padding="12dp"
                    android:layout_centerVertical="true"/>
                <com.stalkstock.utils.custom.TitiliumBoldTextView
                    android:textSize="16sp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Messages"
                    android:textColor="#000"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                 android:background="@color/dark_gray"></View>

<!--
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <com.stalkstock.utils.custom.TitiliumBoldEditText
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/searchshape"
                    android:drawableLeft="@drawable/ic_searchicon"
                    android:drawablePadding="10dp"
                    android:hint="Search.."
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"></com.stalkstock.utils.custom.TitiliumBoldEditText>
            </LinearLayout>
-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/etSearch"
                android:layout_marginTop="15dp"

                android:layout_marginRight="15sp"
                android:layout_marginLeft="15sp"
                android:background="@drawable/shape_edit_new_home"
                android:layout_height="45dp">

                <ImageView
                    android:id="@+id/search"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/search_icon"/>


                <ImageView
                    android:id="@+id/iv_voice"
                    android:paddingRight="12dp"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"

                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    />

                <com.stalkstock.utils.custom.TitiliumRegularEditText
                    android:layout_toRightOf="@+id/search"
                    android:layout_toLeftOf="@+id/iv_voice"
                    android:layout_marginRight="12dp"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:background="@android:color/transparent"
                    android:layout_height="match_parent"
                    android:textSize="17sp"
                    android:hint="Search.."

                    />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/messagerecyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:elevation="@dimen/_10sdp">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>