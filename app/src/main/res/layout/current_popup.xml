<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ca_tv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_margin="@dimen/_20sdp"
    app:cardCornerRadius="@dimen/_12sdp"
    app:cardElevation="@dimen/_2sdp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">

            <ImageView
                android:id="@+id/iv_cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/cross_green" />

            <com.stalkstock.utils.custom.TitiliumRegularTextView
                android:id="@+id/tvOrderID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_cross"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="10dp"
                android:text="Order ID : ADS777558"
                android:textColor="@color/black"
                android:textSize="@dimen/value_12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_cross"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@id/tvStatus"
                android:text="Status : "
                android:textColor="@color/black" />

            <com.stalkstock.utils.custom.TitiliumRegularTextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_cross"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:text="Pending"
                android:textColor="@color/orange_colour" />

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvOrderID"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/subway"
                    android:visibility="invisible"
                    />

                <TextView
                    android:id="@+id/tvDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="10:30am, 20 June 2020"
                    android:textColor="@color/dark_gray" />
            </RelativeLayout>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/rl"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@color/black" />

            <LinearLayout
                android:id="@+id/ll_m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_weight="2">

                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/location1" />

                        <com.stalkstock.utils.custom.TitiliumRegularTextView
                            android:id="@+id/tvDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="9.5 Km"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <com.stalkstock.utils.custom.TitiliumRegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:text="Away"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        android:background="@color/black" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/dollar" />

                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:id="@+id/tvCharge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="$04.49"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <com.stalkstock.utils.custom.TitiliumRegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:text="Esti. Earn"
                            android:textColor="@color/black" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@color/black" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_25sdp">


                    <ImageView

                        android:id="@+id/iv_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/radiobutton" />

                    <ImageView
                        android:id="@+id/iv_sub"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignTop="@+id/iv_circle"
                        android:layout_alignBottom="@+id/iv_circle"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/iv_circle"
                        android:src="@drawable/subway"
                        android:visibility="gone" />

                    <com.stalkstock.utils.custom.TitiliumRegularTextView
                        android:id="@+id/tvMyAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/iv_circle"
                        android:layout_alignBottom="@+id/iv_circle"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/iv_sub"
                        android:text="8753, Mauricio Walks, Mohali Stadium"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:textSize="10sp" />


                    <View
                        android:id="@+id/views"
                        android:layout_width="50dp"
                        android:layout_height="100dp"
                        android:layout_below="@+id/iv_circle"
                        android:layout_marginStart="-18dp"
                        android:background="@drawable/line" />


                    <ImageView
                        android:id="@+id/iv_loc"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_below="@+id/views"
                        android:layout_alignStart="@+id/iv_circle"
                        android:layout_alignEnd="@+id/iv_circle"
                        android:src="@drawable/location_icon"
                        app:tint="@color/black" />

                    <com.stalkstock.utils.custom.TitiliumRegularTextView
                        android:id="@+id/tvUserAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/iv_loc"
                        android:layout_alignBottom="@+id/iv_loc"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/iv_loc"
                        android:gravity="center_vertical"
                        android:text="8753, Mauricio Walks, Mohali Stadium"
                        android:textColor="@color/black"
                        android:textSize="10sp" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/map" />

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/location_dam" />
                </RelativeLayout>
            </LinearLayout>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfile"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@id/ll_m"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/chat_img_1" />

            <com.stalkstock.utils.custom.TitiliumBoldTextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_m"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toEndOf="@id/ivProfile"
                android:text="Allen Chander "
                android:textColor="@color/black"
                android:textSize="18sp" />

            <com.stalkstock.utils.custom.TitiliumRegularTextView
                android:id="@+id/tvUserAddress2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvName"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toEndOf="@id/ivProfile"
                android:text="8753, Mauricio Walks, Mohali Stadium"
                android:textColor="@color/black"
                android:textSize="12sp" />


            <RelativeLayout
                android:id="@+id/rl_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivProfile"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/strokegray1">

                <ImageView
                    android:id="@+id/iv_star"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:src="@drawable/ic_star_black_24dp"
                    app:tint="@color/dark_gray" />

                <com.stalkstock.utils.custom.TitiliumRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_star"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="You Have not been rated by this user yet"
                    android:textColor="@color/dark_gray"
                    android:textSize="18sp" />

            </RelativeLayout>

            <com.stalkstock.utils.custom.TitiliumBoldButton
                android:id="@+id/btnPickDeliver"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/rl_rate"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/btn_shape"
                android:gravity="center"
                android:text="@string/finish_job"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp" />


        </RelativeLayout>
    </ScrollView>


</androidx.cardview.widget.CardView>