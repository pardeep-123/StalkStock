<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <!--
    android:background="@drawable/backgroundimage"
-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
     >
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
            <ImageView
                android:id="@+id/verify_backarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/back_arrow"
                android:layout_marginLeft="10dp">
            </ImageView>
            <com.stalkstock.utils.custom.TitiliumBoldTextView
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verification"
                android:layout_centerVertical="true"
                android:textColor="#000"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:src="@drawable/app_icons"
        android:layout_marginTop="50dp"></ImageView>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">
            <com.stalkstock.utils.custom.TitiliumBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verification Code"
                android:textSize="@dimen/_18sdp"
                android:textColor="#000"
                 android:layout_gravity="center"
                android:gravity="center"/>
            <com.stalkstock.utils.custom.TitiliumRegularTextView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SMS verification code has been\nsent to your registered mobile number"
                android:textSize="16dp"
                android:textColor="#353333"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="vertical">
            <com.stalkstock.utils.custom.TitiliumRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PIN CODE"
            android:textColor="#000"
            android:textSize="14dp"/>
        <LinearLayout
            android:id="@+id/otp_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">
            <com.stalkstock.utils.custom.TitiliumBoldEditText
                android:id="@+id/otp_edit_box1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:inputType="numberPassword"
                android:focusable="true"
                android:backgroundTint="#8BC34A"
                android:maxLength="1"
                android:lines="1"
                android:textSize="28sp"
                android:textColorLink="#000"
                android:textColor="#000"
                android:imeOptions="actionNext" />
            <com.stalkstock.utils.custom.TitiliumBoldEditText
                android:id="@+id/otp_edit_box2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:focusable="true"
                android:backgroundTint="#8BC34A"
                android:gravity="center"
                android:textSize="28sp"
                android:textColor="#000"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:imeOptions="actionNext"
                />
            <com.stalkstock.utils.custom.TitiliumBoldEditText
                android:id="@+id/otp_edit_box3"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_width="0dp"
                android:focusable="true"
                android:backgroundTint="#8BC34A"
                android:layout_height="50dp"
                android:gravity="center"
                android:textSize="28sp"
                android:textColor="#000"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:imeOptions="actionNext"
                />

            <com.stalkstock.utils.custom.TitiliumBoldEditText
                android:id="@+id/otp_edit_box4"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textSize="28sp"
                android:focusable="true"
                android:backgroundTint="#8BC34A"
                android:textColor="#000"
                android:layout_weight="1"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:imeOptions="actionDone"
                />


        </LinearLayout>
            <com.stalkstock.utils.custom.TitiliumRegularTextView
                android:id="@+id/resendotp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:text="@string/resend"
                android:textColor="#8C8C8C"/>
            <com.stalkstock.utils.custom.TitiliumBoldButton
                android:id="@+id/verifybutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textAllCaps="false"
                android:text="Verify"
                android:textColor="#fff"
                android:textSize="16dp"
                android:background="@drawable/buttonshape">
            </com.stalkstock.utils.custom.TitiliumBoldButton>

        </LinearLayout>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>