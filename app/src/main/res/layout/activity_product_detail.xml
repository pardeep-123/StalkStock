<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
   >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitEnd"
        android:src="@drawable/bg_fit"
        android:layout_alignParentRight="true" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                 tools:ignore="MissingConstraints">
                <ImageView
                    android:id="@+id/product_backarrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back_arrow"
                    android:padding="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp">
                </ImageView>
                <com.stalkstock.utils.custom.TitiliumBoldTextView
                    android:textSize="16dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Details"
                    android:textColor="#000"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                 android:layout_height="0.5dp"
                android:background="@color/dark_gray"
                ></View>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/adduploadimages"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/product_img"
                            >
                        </ImageView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        >

                        <LinearLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <com.stalkstock.utils.custom.TitiliumRegularTextView
                                android:id="@+id/product_brand"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Brand"
                                android:textSize="@dimen/_13sdp"
                                android:layout_weight="1"
                                android:textColor="#494848"/>
                            <com.stalkstock.utils.custom.TitiliumBoldTextView
                                android:id="@+id/product_Bacongrill"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Bacon Grill"
                                android:textSize="@dimen/_13sdp"
                                 android:layout_weight="1.3"
                                android:textColor="#000">
                            </com.stalkstock.utils.custom.TitiliumBoldTextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2">
                            <com.stalkstock.utils.custom.TitiliumRegularTextView
                                android:id="@+id/businessname1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tags"
                                android:textSize="@dimen/_13sdp"
                                android:layout_weight="1"
                                android:textColor="#494848">
                            </com.stalkstock.utils.custom.TitiliumRegularTextView>
                            <com.stalkstock.utils.custom.TitiliumBoldTextView
                                android:id="@+id/businessnamee1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Halal"
                                 android:textSize="@dimen/_13sdp"
                                android:layout_weight="1.3"
                                android:textColor="#000">
                            </com.stalkstock.utils.custom.TitiliumBoldTextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2">
                            <com.stalkstock.utils.custom.TitiliumRegularTextView
                                android:id="@+id/businessemail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Product Name"
                                android:textSize="@dimen/_13sdp"
                                android:layout_weight="1"
                                android:textColor="#494848">
                            </com.stalkstock.utils.custom.TitiliumRegularTextView>
                            <com.stalkstock.utils.custom.TitiliumBoldTextView
                                android:id="@+id/businessemailid"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Beef Fresh Meat"
                                 android:textSize="@dimen/_13sdp"
                                android:layout_weight="1.3"
                                android:textColor="#000">
                            </com.stalkstock.utils.custom.TitiliumBoldTextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <com.stalkstock.utils.custom.TitiliumRegularTextView
                                android:id="@+id/businessmobilenuber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Country of Origin"
                                android:textSize="@dimen/_13sdp"
                                android:layout_weight="1"
                                android:textColor="#494848">
                            </com.stalkstock.utils.custom.TitiliumRegularTextView>
                            <com.stalkstock.utils.custom.TitiliumBoldTextView
                                android:id="@+id/businessmobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Brompton"
                                 android:textDirection="ltr"
                                android:textSize="@dimen/_13sdp"
                                android:layout_weight="1.3"
                                android:textColor="#000">
                            </com.stalkstock.utils.custom.TitiliumBoldTextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2">
                            <com.stalkstock.utils.custom.TitiliumRegularTextView
                                android:id="@+id/businesstelephone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Unit of Measurement"
                                android:textSize="@dimen/_13sdp"
                                android:layout_weight="1"
                                android:textColor="#494848">
                            </com.stalkstock.utils.custom.TitiliumRegularTextView>
                            <com.stalkstock.utils.custom.TitiliumBoldTextView
                                android:id="@+id/businesstelephonenumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="gm"
                                 android:textSize="@dimen/_13sdp"
                                android:layout_weight="1.3"
                                android:textColor="#000">
                            </com.stalkstock.utils.custom.TitiliumBoldTextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2">
                            <com.stalkstock.utils.custom.TitiliumRegularTextView
                                android:id="@+id/businesswebsite"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Add Price"
                                android:textSize="@dimen/_13sdp"
                                android:layout_weight="1"
                                android:textColor="#494848">
                            </com.stalkstock.utils.custom.TitiliumRegularTextView>
                            <com.stalkstock.utils.custom.TitiliumBoldTextView
                                android:id="@+id/businesswebsitename"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="$9.50"
                                 android:textSize="@dimen/_13sdp"
                                android:layout_weight="1.3"
                                android:textColor="#000">
                            </com.stalkstock.utils.custom.TitiliumBoldTextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <com.stalkstock.utils.custom.TitiliumRegularTextView
                                android:id="@+id/businessaddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Product Description"
                                android:textSize="@dimen/_13sdp"
                                android:layout_weight="1"
                                android:textColor="#494848">
                            </com.stalkstock.utils.custom.TitiliumRegularTextView>

                            <com.stalkstock.utils.custom.TitiliumBoldTextView
                                android:id="@+id/businesscity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:textDirection="ltr"
                                android:text="Lorem ipsum dolor sit amet,consectetur adipiscing elit,sed do eiusmod tempor."
                                android:textColor="#000"
                                 android:textSize="@dimen/_13sdp"></com.stalkstock.utils.custom.TitiliumBoldTextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="@dimen/_12sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2">
                            <com.stalkstock.utils.custom.TitiliumRegularTextView
                                android:id="@+id/businesstype"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Availability"
                                android:textSize="@dimen/_13sdp"
                                android:layout_weight="1"
                                android:textColor="#494848">
                            </com.stalkstock.utils.custom.TitiliumRegularTextView>
                            <com.stalkstock.utils.custom.TitiliumBoldTextView
                                android:id="@+id/businesstypes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Available"
                                 android:textSize="@dimen/_13sdp"
                                android:layout_weight="1.3"
                                android:textColor="#000">
                            </com.stalkstock.utils.custom.TitiliumBoldTextView>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="@dimen/_30sdp"
                                android:layout_marginBottom="20dp"
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"
                                android:layout_height="wrap_content">
                                <com.stalkstock.utils.custom.TitiliumBoldButton
                                    android:id="@+id/edit_btn"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="20dp"
                                    android:background="@drawable/buttonshape"
                                    android:backgroundTint="#8BC34A"
                                    android:textAllCaps="false"
                                    android:text="Edit"
                                    android:layout_weight="1"
                                    android:textColor="#fff"
                                    android:textSize="15dp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    >
                                </com.stalkstock.utils.custom.TitiliumBoldButton>
                                <com.stalkstock.utils.custom.TitiliumBoldButton
                                    android:layout_weight="1"
                                    android:id="@+id/delete_btn"
                                    android:layout_marginBottom="20dp"

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:textAllCaps="false"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/edittextshape"
                                    android:text="Delete"
                                    android:textColor="#8BC34A"
                                    android:textSize="15dp">
                                </com.stalkstock.utils.custom.TitiliumBoldButton>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>