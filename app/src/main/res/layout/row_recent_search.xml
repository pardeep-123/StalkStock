<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/_5sdp">

    <com.stalkstock.utils.custom.TitiliumBoldTextView
        android:id="@+id/tvSearchTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_8sdp"
        android:background="#EFECEC"
        android:paddingStart="@dimen/_8sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:paddingTop="@dimen/_3sdp"
        android:paddingBottom="@dimen/_3sdp"
        android:gravity="center"
        android:minWidth="@dimen/_40sdp"
        android:text="meet"
        android:textColor="#8BC34A"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/ivCross"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        android:src="@drawable/cross_icon"
        app:layout_constraintEnd_toEndOf="@id/tvSearchTag"
        app:layout_constraintStart_toEndOf="@id/tvSearchTag"
        app:layout_constraintTop_toTopOf="@id/tvSearchTag"
        app:layout_constraintBottom_toTopOf="@id/tvSearchTag"
        />
</androidx.constraintlayout.widget.ConstraintLayout>