<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitEnd"
        android:src="@drawable/bg_fit" />

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <com.stalkstock.utils.custom.TitiliumBoldTextView
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Filters"
            android:textColor="@color/black"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="Reset"
            android:textColor="@color/light_grey2" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:id="@+id/view"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/toolbar"
        android:background="@color/grey"/>
    <LinearLayout
        android:layout_below="@id/view"
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.stalkstock.utils.custom.TitiliumBoldTextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:text="SORT BY TAGS"
            android:textColor="@color/dark_gray"
            android:textSize="17sp"
          />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recy_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="4"
            tools:listitem="@layout/row_filter" />



        <com.stalkstock.utils.custom.TitiliumSemiBoldTextView
            android:id="@+id/tv_sort_cate"
            android:visibility="gone"

            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SORT BY CATEGORY"
            android:textColor="@color/dark_gray"
            android:textSize="17sp"
            />
        <RelativeLayout
            android:id="@+id/rl_sort_cate"

            android:visibility="gone"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            android:background="@drawable/edittextshape"
            >
            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:hint="Select Category"
                android:text="Select Category"

                android:entries="@array/Select_Category"
                android:textColorHint="@color/dark_gray"
                android:paddingLeft="15dp"
                android:paddingRight="20dp"
                android:textSize="15dp"

                />

        </RelativeLayout>
            <com.stalkstock.utils.custom.TitiliumBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:text="Select Category"
                android:textStyle="bold"
                android:textColor="@color/light_grey"
                android:textSize="14dp"/>

        </RelativeLayout>
        <com.stalkstock.utils.custom.TitiliumBoldTextView
            android:id="@+id/tvSortBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="SORT BY "
            android:textColor="@color/dark_gray"
            android:textSize="17sp"
              />
        <RelativeLayout
           android:id="@+id/rlCost"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.stalkstock.utils.custom.TitiliumRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="15dp"
                android:text="Cost High to Low "
                android:textColor="@color/green_colour"
                />
            <ImageView
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:src="@drawable/check_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <View
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@color/dark_gray"
            android:layout_width="match_parent"
            android:layout_height="0.8dp" />
        <RelativeLayout

            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.stalkstock.utils.custom.TitiliumRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="15dp"
                android:text="Cost Low to High"
                android:textColor="@color/dark_gray"
                />
            <ImageView
                android:visibility="gone"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:src="@drawable/check_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <com.stalkstock.utils.custom.TitiliumBoldTextView
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:text="PRICE"
            android:textColor="@color/dark_gray"
            android:textSize="17sp"
            />
        <RelativeLayout
            android:layout_marginLeft="15dp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.stalkstock.utils.custom.TitiliumBoldTextView
                android:id="@+id/tv_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textColor="@color/black"
                android:textSize="17sp"
                 />
            <com.stalkstock.utils.custom.TitiliumBoldTextView
                android:textSize="17sp"
                android:id="@+id/tv_end"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$250.00"
                android:textColor="@color/black"
                 />
        </RelativeLayout>

        <com.innovattic.rangeseekbar.RangeSeekBar
            android:layout_marginRight="@dimen/_4sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            app:rsb_trackColor="@color/dark_gray"

            app:rsb_trackSelectedColor="@color/green_colour"
            android:backgroundTint="@android:color/transparent"
            android:id="@+id/rangeSeekBar"
            app:rsb_minRange="0"
            app:rsb_max="350"
            app:rsb_trackThickness="@dimen/_3sdp"
            app:rsb_trackSelectedThickness="@dimen/_3sdp"
            app:rsb_minThumbDrawable="@drawable/custom_switch"
            app:rsb_maxThumbDrawable="@drawable/custom_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <com.stalkstock.utils.custom.TitiliumBoldTextView
            android:layout_marginBottom="5dp"
            android:id="@+id/btn_clear"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"

            android:layout_height="45dp"
             android:background="@drawable/strokegray"
            android:textColor="@color/dark_gray"

              android:text="Clear"
            android:textAllCaps="false"
            android:textSize="15sp" />
        <View
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_10sdp"/>
        <com.stalkstock.utils.custom.TitiliumBoldButton
            android:layout_marginBottom="5dp"
            android:id="@+id/btn_apply"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"

            android:background="@drawable/btn_shape"
            android:gravity="center"
             android:text="Apply"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>


</RelativeLayout>