<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:scaleType="fitEnd"
        android:src="@drawable/bg_fit" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/addproduct_backarrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:src="@drawable/back_arrow"></ImageView>

                <com.stalkstock.utils.custom.TitiliumBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Add Product"
                    android:textColor="#000"
                    android:textSize="16dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dark_gray"></View>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/add_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_Img"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/addproduct" />

                        <ImageView
                            android:id="@+id/add_uploadimages"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:padding="70dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/camera" />

                        <ImageView
                            android:id="@+id/add_deleteicon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/dlt_green"
                            android:visibility="gone"/>
                    </RelativeLayout>

                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:orientation="horizontal">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvSubImages"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_85sdp"
                                android:layout_alignParentStart="true"
                                android:layout_marginEnd="@dimen/_4sdp"
                                android:layout_toStartOf="@+id/relative_imagesthree"
                                tools:listitem="@layout/item_sub_images" />

                            <RelativeLayout
                                android:id="@+id/relative_imagesthree"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_80sdp"
                                android:background="@drawable/addproduct">

                                <ImageView
                                    android:id="@+id/ivUpload"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/addproduct"
                                    android:scaleType="fitCenter" />

                                <ImageView
                                    android:id="@+id/imagesthree"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center"
                                    android:src="@drawable/pro_camera_icon" />

                            </RelativeLayout>
                        </RelativeLayout>
                    </androidx.core.widget.NestedScrollView>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="20dp">

                        <com.stalkstock.utils.custom.TitiliumBoldEditText
                            android:id="@+id/addproductbrand"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/edit_text_bg_trans"
                            android:hint="Brand"
                            android:inputType="text"
                            android:paddingLeft="15dp"
                            android:textColor="#000"
                            android:textColorHint="@color/light_grey"
                            android:textSize="13sp" />

                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="5dp"
                            android:background="#fff"
                            android:text="Brand"
                            android:textColor="@color/light_grey"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="20dp">


                        <RelativeLayout
                            android:id="@+id/relProducts"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/edittextshape">

                            <Spinner
                                android:id="@+id/spinnerGetProduct"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingHorizontal="20dp"

                                android:prompt="@string/dropdown"
                                android:text="Select Product"
                                android:textColor="#000"
                                android:textColorHint="@color/light_grey"
                                android:textSize="12sp" />

                        </RelativeLayout>

                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="5dp"
                            android:background="#fff"
                            android:text="Product Name"
                            android:textColor="@color/light_grey"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlProdType"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="20dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/edit_text_bg_trans">

                            <Spinner
                                android:id="@+id/spinnerProdType"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:entries="@array/Select_product_type"
                                android:gravity="center_vertical"
                                android:paddingLeft="15dp"
                                android:paddingRight="20dp"
                                android:prompt="@string/dropdown1"
                                android:text="Select Product Type"
                                android:textColor="#000"
                                android:textColorHint="@color/light_grey"
                                android:textSize="13sp" />

                        </RelativeLayout>

                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="5dp"
                            android:background="#fff"
                            android:text="Product Type"
                            android:textColor="@color/light_grey"
                            android:textSize="13sp"
                            android:textStyle="bold" />


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="20dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/edit_text_bg">

                            <Spinner
                                android:id="@+id/spinnerCountry"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:entries="@array/Select_country"
                                android:gravity="center_vertical"
                                android:paddingHorizontal="20dp"
                                android:prompt="@string/select_country"
                                android:textColor="#000"
                                android:textColorHint="#F8F6F6"
                                android:textSize="13sp" />

                        </RelativeLayout>

                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="5dp"
                            android:background="#fff"
                            android:text="Country of Origin"
                            android:textColor="@color/light_grey"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="20dp">

                        <com.stalkstock.utils.custom.TitiliumBoldTextView

                            android:id="@+id/addproductmasurement"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/edit_text_bg_trans"
                            android:gravity="center_vertical"
                            android:hint="Unit of measurement"
                            android:inputType="text"
                            android:paddingLeft="15dp"
                            android:textColor="#000"
                            android:textColorHint="@color/light_grey"
                            android:textSize="13sp" />

                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="5dp"
                            android:background="#fff"
                            android:text="Unit of Measurement"
                            android:textColor="@color/light_grey"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="20dp">

                        <com.stalkstock.utils.custom.TitiliumBoldEditText
                            android:id="@+id/addproductprice"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/edit_text_bg_trans"
                            android:hint="Add Price"
                            android:inputType="number"
                            android:paddingLeft="15dp"
                            android:textColor="#000"
                            android:maxLength="5"
                            android:textColorHint="@color/light_grey"
                            android:textSize="13sp" />

                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="5dp"
                            android:background="#fff"
                            android:text="Add Price"
                            android:textColor="@color/light_grey"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="20dp">

                        <com.stalkstock.utils.custom.TitiliumBoldEditText
                            android:id="@+id/addproductdescription"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/edit_text_bg_trans"
                            android:gravity="start"
                            android:hint="Product Description"

                            android:inputType="textMultiLine"
                            android:paddingLeft="15dp"
                            android:paddingTop="10dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="10dp"
                            android:textColor="#000"
                            android:textColorHint="@color/light_grey"
                            android:textSize="13sp" />

                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="5dp"
                            android:background="#fff"
                            android:text="Product Description"
                            android:textColor="@color/light_grey"
                            android:textSize="13sp" />
                    </RelativeLayout>
                    <!--
                                        <RelativeLayout
                                            android:layout_marginTop="8dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="60dp"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginRight="20dp">
                                            <com.stalkstock.utils.custom.TitiliumBoldTextView
                                                android:id="@+id/addproductavailability"
                                                android:layout_width="match_parent"
                                                android:layout_height="45dp"
                                                android:layout_marginTop="15dp"
                                                android:background="@drawable/edittextshape"
                                                android:paddingLeft="15dp"
                                                android:gravity="center_vertical"
                                                android:inputType="text"
                                                android:hint="Available"
                                                android:drawableRight="@drawable/down_arow"
                                                android:paddingRight="15dp"
                                                 android:textColorHint="@color/light_grey"
                                                android:textSize="13sp"
                                                android:textColor="#000"/>
                                            <com.stalkstock.utils.custom.TitiliumBoldTextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="35dp"
                                                android:layout_marginTop="2dp"
                                                android:background="#fff"
                                                android:text="Availability"
                                                 android:textColor="@color/light_grey"
                                                android:textSize="13sp"
                                                />
                                        </RelativeLayout>
                    -->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="20dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/edit_text_bg_trans">

                            <Spinner
                                android:id="@+id/spinner"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:entries="@array/Select_Category_available"
                                android:gravity="center_vertical"
                                android:paddingLeft="15dp"
                                android:paddingRight="20dp"
                                android:prompt="@string/dropdown1"
                                android:text="Select Category"
                                android:textColor="#000"

                                android:textColorHint="@color/light_grey"
                                android:textSize="13sp" />

                        </RelativeLayout>

                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="5dp"
                            android:background="#fff"
                            android:text="Availability"
                            android:textColor="@color/light_grey"
                            android:textSize="13sp"
                            android:textStyle="bold" />


                    </RelativeLayout>

                    <com.stalkstock.utils.custom.TitiliumBoldButton
                        android:id="@+id/addproductsubmitbutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/buttonshape"
                        android:text="Submit"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="16dp"/>
                </LinearLayout>


            </ScrollView>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>