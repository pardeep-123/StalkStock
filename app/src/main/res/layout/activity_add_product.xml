<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_fit"
        android:layout_alignParentRight="true"
        android:scaleType="fitEnd"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                 tools:ignore="MissingConstraints">
                <ImageView
                    android:id="@+id/addproduct_backarrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/back_arrow"
                    android:layout_marginLeft="10dp">
                </ImageView>
                <com.stalkstock.utils.custom.TitiliumBoldTextView
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Product"
                    android:textColor="#000"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                 android:layout_height="0.5dp"
                android:background="@color/dark_gray"
                ></View>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/add_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/iv_Img"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:background="@drawable/addproduct"
                            android:layout_centerInParent="true"/>

                        <ImageView
                            android:id="@+id/add_uploadimages"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="fitCenter"
                            android:padding="70dp"
                            android:src="@drawable/camera">
                        </ImageView>
                        <ImageView
                            android:id="@+id/add_deleteicon"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/dlt_green"
                            android:scaleType="fitCenter"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            ></ImageView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/add_images"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/adduploadddimagesone"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:scaleType="fitXY"
                            android:background="@drawable/addproduct"
                            android:src="@drawable/ad_img_2">
                        </ImageView>
                        <ImageView
                            android:id="@+id/adduploadimaddgestwo"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:scaleType="fitXY"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:background="@drawable/addproduct"
                            android:src="@drawable/advertiser_img">
                        </ImageView>

                        <RelativeLayout
                            android:id="@+id/imagethree"

                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:background="@drawable/addproduct"
                            android:layout_alignParentRight="true">
                            <ImageView
                                android:id="@+id/uploadimagesthree"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitCenter"
                                android:background="@drawable/addproduct"
                                ></ImageView>
                            <ImageView
                                android:id="@+id/imagesthree"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/pro_camera_icon"
                                ></ImageView>

                        </RelativeLayout>

                        <!--
                                                <ImageView
                                                    android:id="@+id/add_uploadimagesthree"
                                                    android:layout_width="@dimen/_80sdp"
                                                    android:layout_height="@dimen/_80sdp"
                                                    android:layout_alignParentRight="true"
                                                    android:scaleType="fitCenter"
                                                    android:background="@drawable/addproduct"
                                                    android:padding="@dimen/_25sdp"
                                                    android:src="@drawable/camera"
                                                    app:tint="#000"></ImageView>
                        -->


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <com.stalkstock.utils.custom.TitiliumBoldEditText
                            android:id="@+id/addproductbrand"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/edit_text_bg_trans"
                            android:paddingLeft="15dp"
                            android:inputType="text"
                            android:hint="Brand"
                             android:textColorHint="@color/light_grey"
                            android:textSize="13sp"
                            android:textColor="#000"/>
                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="5dp"
                            android:background="#fff"
                            android:text="Brand"
                             android:textColor="@color/light_grey"
                            android:textSize="13sp"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <com.stalkstock.utils.custom.TitiliumBoldEditText
                            android:id="@+id/addproductname"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/edit_text_bg_trans"
                            android:paddingLeft="15dp"
                            android:hint="Enter product name "
                             android:textColorHint="@color/light_grey"
                            android:textSize="13sp"
                            android:textColor="#000"/>
                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="5dp"
                            android:background="#fff"
                            android:text="Product Name"
                             android:textColor="@color/light_grey"
                            android:textSize="13sp"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <com.stalkstock.utils.custom.TitiliumBoldEditText
                            android:id="@+id/addproductorigin"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/edit_text_bg_trans"
                            android:paddingLeft="15dp"
                            android:inputType="text"
                             android:hint="Country of origin"
                            android:textColorHint="@color/light_grey"
                            android:textSize="13sp"
                            android:textColor="#000"/>
                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="5dp"
                            android:background="#fff"
                            android:text="Country of Origin"
                             android:textColor="@color/light_grey"
                            android:textSize="13sp"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <com.stalkstock.utils.custom.TitiliumBoldTextView

                            android:id="@+id/addproductmasurement"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/edit_text_bg_trans"
                            android:paddingLeft="15dp"
                            android:inputType="text"
                            android:hint="Unit of measurement"
                            android:gravity="center_vertical"
                             android:textColorHint="@color/light_grey"
                            android:textSize="13sp"
                            android:textColor="#000"/>
                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="5dp"
                            android:background="#fff"
                            android:text="Unit of Measurement"
                             android:textColor="@color/light_grey"
                            android:textSize="13sp"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <com.stalkstock.utils.custom.TitiliumBoldEditText
                            android:id="@+id/addproductprice"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/edit_text_bg_trans"
                            android:paddingLeft="15dp"
                            android:hint="Add Price"
                            android:inputType="number"
                             android:textColorHint="@color/light_grey"
                            android:textSize="13sp"
                            android:textColor="#000"/>
                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="5dp"
                             android:textColor="@color/light_grey"
                            android:background="#fff"
                            android:text="Add Price"
                            android:textSize="13sp"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <com.stalkstock.utils.custom.TitiliumBoldEditText
                            android:id="@+id/addproductdescription"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/edit_text_bg_trans"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"

                            android:inputType="textMultiLine"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:gravity="start"                            android:hint="Product Description"
                               android:textColorHint="@color/light_grey"
                            android:textSize="13sp"
                            android:textColor="#000"/>
                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="5dp"
                             android:textColor="@color/light_grey"
                            android:background="#fff"
                            android:text="Product Description"
                            android:textSize="13sp"
                            />
                    </RelativeLayout>
<!--
                    <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:id="@+id/addproductavailability"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/edittextshape"
                            android:paddingLeft="15dp"
                            android:gravity="center_vertical"
                            android:inputType="text"
                            android:hint="Available"
                            android:drawableRight="@drawable/down_arow"
                            android:paddingRight="15dp"
                             android:textColorHint="@color/light_grey"
                            android:textSize="13sp"
                            android:textColor="#000"/>
                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:text="Availability"
                             android:textColor="@color/light_grey"
                            android:textSize="13sp"
                            />
                    </RelativeLayout>
-->

                    <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/edit_text_bg_trans"
                            >
                            <Spinner
                                android:id="@+id/spinner"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingLeft="15dp"
                                android:text="Select Category"
                                android:entries="@array/Select_Category_available"
                                android:prompt="@string/dropdown1"
                                android:paddingRight="20dp"
                                android:textStyle="bold"

                                android:textColorHint="@color/light_grey"
                                android:textSize="13sp"
                                android:textColor="#000"/>

                        </RelativeLayout>
                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="5dp"
                            android:background="#fff"
                            android:text="Availability"
                            android:textStyle="bold"
                            android:textColor="@color/light_grey"
                            android:textSize="13sp"
                            />


                    </RelativeLayout>

                    <com.stalkstock.utils.custom.TitiliumBoldButton
                        android:id="@+id/addproductsubmitbutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="30dp"
                        android:textAllCaps="false"
                        android:text="Submit"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:background="@drawable/buttonshape">
                    </com.stalkstock.utils.custom.TitiliumBoldButton>

                </LinearLayout>


            </ScrollView>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>



</RelativeLayout>