<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_fit"
        android:scaleType="fitEnd"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                tools:ignore="MissingConstraints">
                <ImageView
                    android:id="@+id/addproduct_backarrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/back_arrow"
                    android:layout_marginLeft="10dp">
                </ImageView>
                <com.stalkstock.utils.custom.TitiliumBoldTextView
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Product"
                    android:textColor="#000"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="1dp"
                android:background="#BDBCBC"
                ></View>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/add_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/iv_Img"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:background="@drawable/addproduct"
                            android:layout_centerInParent="true"/>

                        <ImageView
                            android:id="@+id/add_uploadimages"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="fitCenter"
                            android:padding="70dp"
                            android:src="@drawable/camera">
                        </ImageView>
                        <ImageView
                            android:id="@+id/add_deleteicon"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/dlt_green"
                            android:scaleType="fitCenter"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            ></ImageView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/add_images"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/adduploadimagesone"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:scaleType="fitXY"
                            android:background="@drawable/addproduct"
                            android:src="@drawable/ad_img_2">
                        </ImageView>
                        <ImageView
                            android:id="@+id/adduploadimagestwo"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:scaleType="fitXY"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:background="@drawable/addproduct"
                            android:src="@drawable/advertiser_img">
                        </ImageView>

                        <ImageView
                            android:id="@+id/add_uploadimagesthree"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_alignParentRight="true"
                            android:scaleType="fitCenter"
                            android:background="@drawable/addproduct"
                            android:padding="@dimen/_25sdp"
                            android:src="@drawable/camera"
                            app:tint="#000"></ImageView>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <com.stalkstock.utils.custom.TitiliumBoldEditText
                            android:id="@+id/addproductbrand"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/edittextshape"
                            android:paddingLeft="15dp"
                            android:inputType="text"
                            android:hint="Brand"
                             android:textColorHint="#FFC3C3C3"
                            android:textSize="15dp"
                            android:textColor="#000"/>
                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="5dp"
                            android:background="#fff"
                            android:text="Brand"
                             android:textColor="#FFC3C3C3"
                            android:textSize="14dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <com.stalkstock.utils.custom.TitiliumBoldEditText
                            android:id="@+id/addproductname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/edittextshape"
                            android:paddingLeft="15dp"
                            android:hint="Enter product name "
                             android:textColorHint="#FFC3C3C3"
                            android:textSize="15dp"
                            android:textColor="#000"/>
                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="5dp"
                            android:background="#fff"
                            android:text="Product Name"
                             android:textColor="#FFC3C3C3"
                            android:textSize="14dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <com.stalkstock.utils.custom.TitiliumBoldEditText
                            android:id="@+id/addproductorigin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/edittextshape"
                            android:paddingLeft="15dp"
                            android:inputType="text"
                             android:hint="Country of origin"
                            android:textColorHint="#FFC3C3C3"
                            android:textSize="15dp"
                            android:textColor="#000"/>
                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="5dp"
                            android:background="#fff"
                            android:text="Country of Origin"
                             android:textColor="#FFC3C3C3"
                            android:textSize="14dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <com.stalkstock.utils.custom.TitiliumBoldEditText
                            android:id="@+id/addproductmasurement"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/edittextshape"
                            android:paddingLeft="15dp"
                            android:inputType="text"
                            android:hint="Unit of measurement"
                            android:gravity="center_vertical"
                             android:textColorHint="#FFC3C3C3"
                            android:textSize="15dp"
                            android:textColor="#000"/>
                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="5dp"
                            android:background="#fff"
                            android:text="Unit of Measurement"
                             android:textColor="#FFC3C3C3"
                            android:textSize="14dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <com.stalkstock.utils.custom.TitiliumBoldEditText
                            android:id="@+id/addproductprice"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/edittextshape"
                            android:paddingLeft="15dp"
                            android:hint="Add Price"
                            android:inputType="number"
                             android:textColorHint="#FFC3C3C3"
                            android:textSize="15dp"
                            android:textColor="#000"/>
                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="5dp"
                             android:textColor="#FFC3C3C3"
                            android:background="#fff"
                            android:text="Add Price"
                            android:textSize="14dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <com.stalkstock.utils.custom.TitiliumBoldEditText
                            android:id="@+id/addproductdescription"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/edittextshape"
                            android:paddingLeft="15dp"
                             android:inputType="text"
                            android:hint="Product Description"
                            android:maxLines="3"
                            android:gravity="center_vertical"
                             android:textColorHint="#FFC3C3C3"
                            android:textSize="15dp"
                            android:textColor="#000"/>
                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="5dp"
                             android:textColor="#FFC3C3C3"
                            android:background="#fff"
                            android:text="Product Description"
                            android:textSize="14dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:id="@+id/addproductavailability"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/edittextshape"
                            android:paddingLeft="15dp"
                            android:gravity="center_vertical"
                            android:inputType="text"
                            android:hint="Available"
                            android:drawableRight="@drawable/down_arow"
                            android:paddingRight="15dp"
                             android:textColorHint="#FFC3C3C3"
                            android:textSize="15dp"
                            android:textColor="#000"/>
                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:text="Availability"
                             android:textColor="#FFC3C3C3"
                            android:textSize="14dp"/>
                    </RelativeLayout>

                    <Button
                        android:id="@+id/addproductsubmitbutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="30dp"
                        android:textAllCaps="false"
                        android:text="Submit"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:background="@drawable/buttonshape">
                    </Button>

                </LinearLayout>


            </ScrollView>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>



</RelativeLayout>