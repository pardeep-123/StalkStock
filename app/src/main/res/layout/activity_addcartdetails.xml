        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search"
            android:layout_toLeftOf="@+id/fillter"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/search_icon_new"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/notification_icon1"
            android:id="@+id/ivnotification"

             android:layout_toLeftOf="@+id/search"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
             />

        <ImageView
            android:id="@+id/fillter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/filter_icn1"
            android:layout_centerVertical="true"

            android:layout_marginRight="10dp"

            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <View
        android:id="@+id/view1231"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/top12"
        android:background="@color/light_grey" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsc_top"

        android:layout_above="@+id/all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view1231">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ad_img_2" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="-40dp"
                android:layout_marginRight="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@drawable/background_box_white1"

                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:id="@+id/img"
                            android:layout_width="65dp"
                            android:layout_height="50dp"
                            android:src="@drawable/mc_img" />

                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:id="@+id/kfc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/img"
                            android:text="McDonald's"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                              />

                        <com.stalkstock.utils.custom.TitiliumRegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/kfc"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/img"
                            android:text="New York, USA" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/light_grey" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <com.stalkstock.utils.custom.TitiliumRegularTextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:drawableLeft="@drawable/star_fill"
                            android:drawablePadding="10dp"
                            android:text="4.1 Rating. 500+"
                            android:textSize="14sp" />

                        <com.stalkstock.utils.custom.TitiliumRegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/name"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:text="45 Minutes (Delivery time)"

                            android:textSize="14sp" />


                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="115dp"
                        android:layout_height="130dp"

                        android:scaleType="fitXY"
                        android:src="@drawable/product_img_1" />

                    <com.stalkstock.utils.custom.TitiliumBoldTextView
                        android:id="@+id/name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/img1"
                        android:text="Meat"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                          />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"

                        android:src="@drawable/red_dot" />

<!--
                    <ImageView
                        android:id="@+id/star"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_below="@+id/name1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/img1"
                        android:src="@drawable/star_fill" />
-->

                    <RatingBar
                        android:id="@+id/star"

                        android:layout_below="@+id/name1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:progressTint="@color/yellow"
                        android:progressBackgroundTint="@color/yellow"
                        android:layout_toRightOf="@+id/img1"
                        android:rating="5"
                        android:numStars="5"
                        style="?android:attr/ratingBarStyleSmall"/>

                    <com.stalkstock.utils.custom.TitiliumBoldTextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/star"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/img1"
                        android:text="Beef: $9.50/LB"
                        android:textColor="@android:color/black"
                        android:textSize="19sp"
                          />

                    <com.stalkstock.utils.custom.TitiliumRegularTextView
                        android:id="@+id/location_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/price"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/img1"
                        android:drawableLeft="@drawable/green_location_arrow"
                        android:drawablePadding="5dp"
                        android:text="New York 920.." />

                    <RelativeLayout
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/location_text"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/background_box_new"
                        android:textColor="@color/theme_green"

                        >

                        <com.stalkstock.utils.custom.TitiliumRegularTextView
                            android:id="@+id/minus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="@color/theme_green"
                            android:textSize="20sp" />

                        <com.stalkstock.utils.custom.TitiliumRegularTextView
                            android:id="@+id/count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="1"
                            android:textColor="@color/theme_green"
                            android:textSize="15sp" />

                        <com.stalkstock.utils.custom.TitiliumRegularTextView
                            android:id="@+id/plus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="@color/theme_green"
                            android:textSize="20sp" />
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/productdetails_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"

                android:layout_marginRight="5dp"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
