<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="40dp">

    <RelativeLayout
        android:id="@+id/rltoo"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <com.stalkstock.utils.custom.TitiliumBoldTextView
            android:id="@+id/tv_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:visibility="gone"
            android:layout_centerInParent="true"

            android:gravity="center"
             android:textColor="@color/home_grey"
            android:textSize="18dp"
            />

       <!-- #7A7A7A-->
        <View
            android:id="@+id/view_simple"
            android:layout_alignLeft="@+id/tv_item_title"
            android:layout_alignRight="@+id/tv_item_title"
             android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:layout_height="1dp"
            android:background="@color/light_grey"/>


        <com.stalkstock.utils.custom.TitiliumBoldTextView
            android:id="@+id/tv_item_title_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:visibility="gone"
            android:layout_centerInParent="true"


             android:gravity="center"
             android:textColor="@color/theme_green"
            android:textSize="18dp"
            />

        <View
            android:id="@+id/view_bold"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/tv_item_title_bold"
            android:layout_alignRight="@+id/tv_item_title_bold"
             android:layout_width="match_parent"
            android:layout_height="1dp"

            android:visibility="gone"
            android:background="@color/theme_green"/>

    </RelativeLayout>

</RelativeLayout>