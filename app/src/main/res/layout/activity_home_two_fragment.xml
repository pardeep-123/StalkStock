<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hometwo"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_60sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
         tools:ignore="MissingConstraints">

        <com.stalkstock.utils.custom.TitiliumBoldTextView
            android:textSize="16dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Products"
            android:textColor="#000"
            android:layout_centerHorizontal="true"/>


        <ImageView
            android:id="@+id/iv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/notification"
            android:layout_centerVertical="true"
             android:src="@drawable/chat_grey_icon1"
            android:tint="#ED1F24"
            android:layout_marginRight="15dp"
            >
        </ImageView>


        <ImageView
            android:id="@+id/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/filter"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/notification_icon1"
            android:layout_marginRight="10dp"
          >
        </ImageView>
        <ImageView
            android:id="@+id/filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/filter_icn1"
            android:layout_marginLeft="10dp"
             >
        </ImageView>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
         android:layout_height="0.5dp"
        android:background="@color/dark_gray"
        ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">


<!--
            <RelativeLayout
                android:id="@+id/edit_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.stalkstock.utils.custom.TitiliumBoldTextView
                     android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/searchshape"
                    android:drawableRight="@drawable/ic_audioicon"
                    android:drawableLeft="@drawable/ic_searchicon"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:drawablePadding="12dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:hint="Search.."/>

            </RelativeLayout>
-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/edit_search"


                android:padding="12dp"
                android:background="@drawable/shape_edit_new_home"
                android:layout_height="45dp">

                <ImageView
                    android:id="@+id/search"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/search_icon"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"

                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/audio_icon"/>

                <com.stalkstock.utils.custom.TitiliumRegularTextView
                    android:layout_toRightOf="@+id/search"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="17sp"
                    android:text="Search.."
                    />

            </RelativeLayout>
            <com.stalkstock.utils.custom.TitiliumBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:layout_gravity="right"
                android:text="Total:2"
                android:textSize="15dp"
                android:textColor="#000"/>

        </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerview"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            >
        <com.stalkstock.utils.custom.TitiliumBoldButton
            android:id="@+id/addproductbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Add Product"
            android:textColor="#fff"
            android:textSize="16dp"
            android:background="@drawable/buttonshape"/>
        </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>