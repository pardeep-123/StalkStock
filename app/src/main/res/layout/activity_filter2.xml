<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
         android:layout_height="50dp">

        <com.stalkstock.utils.custom.TitiliumBoldTextView
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Filters"
            android:textColor="@color/black"
              />



    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BDBCBC"
        ></View>
    <LinearLayout
        android:layout_below="@id/toolbar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:text="SORT BY TAGS"
            android:textColor="#575656"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/filter_tagone"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/textbackground"
                android:text="Kosher"
                android:textColor="#9E9C9C"></TextView>
            <TextView
                android:id="@+id/filter_tagtwo"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@drawable/edit_background"
                android:text="Halal"
                android:textColor="#9E9C9C"></TextView>
            <TextView
                android:id="@+id/filter_tagthree"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@drawable/textbackground"
                android:text="Organic"
                android:textColor="#9E9C9C"></TextView>
            <TextView
                android:id="@+id/filter_tagfour"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@drawable/textbackground"
                android:text="Seasonal"
                android:textColor="#9E9C9C"></TextView>
        </LinearLayout>




        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SORT BY CATEGORY"
            android:textStyle="bold"
            android:textColor="#575656"
            android:textSize="@dimen/_18sdp"
            ></TextView>
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/edittextshape"
                >
                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:hint="Select Category"
                    android:text="Select Category"
                    android:entries="@array/Select_Category"
                    android:textColorHint="#FFC3C3C3"
                    android:paddingLeft="15dp"
                    android:paddingRight="20dp"
                    android:textSize="15dp"

                    />

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:text="Select Category"
                android:textStyle="bold"
                android:textColor="#FFC3C3C3"
                android:textSize="14dp"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="SORT BY"
            android:textColor="#575656"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp" />
        <RelativeLayout
            android:id="@+id/relativeone"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/setprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Cost High to Low "
                android:textColor="#8BC34A"
                android:layout_marginLeft="10dp" />
            <RelativeLayout
                android:id="@+id/checkone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:src="@drawable/check_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="1dp"
            android:background="#BDBCBC"
            ></View>
        <RelativeLayout
            android:id="@+id/relativetwo"

            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/setpricetwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Cost High to Low "
                android:textColor="#777575"
                android:layout_marginLeft="10dp" />
            <RelativeLayout
                android:id="@+id/checktwo"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:src="@drawable/check_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="PRICE"
            android:textColor="#575656"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />
        <RelativeLayout
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textColor="#000"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />
            <TextView
                android:textSize="@dimen/_16sdp"
                android:id="@+id/tv_end"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$250.00"
                android:textColor="#000"
                android:textStyle="bold" />
        </RelativeLayout>

        <com.innovattic.rangeseekbar.RangeSeekBar
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            app:rsb_trackSelectedColor="#8BC34A"
            android:id="@+id/rangeSeekBar"
            app:rsb_minRange="0"
            app:rsb_max="350"
            app:rsb_trackThickness="@dimen/_5sdp"
            app:rsb_trackSelectedThickness="@dimen/_3sdp"
            app:rsb_minThumbDrawable="@drawable/customprice"
            app:rsb_maxThumbDrawable="@drawable/customprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_clear"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_height="wrap_content"
            android:backgroundTint="#bedd7e"
            android:background="@drawable/buttonshape"
            android:gravity="center"
            android:minHeight="40dp"
            android:text="Clear"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp" />
        <View
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_10sdp"/>
        <Button
            android:layout_marginBottom="@dimen/_15sdp"
            android:id="@+id/btn_apply"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:gravity="center"
            android:minHeight="40dp"
            android:text="Apply"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>
</LinearLayout>
</RelativeLayout>