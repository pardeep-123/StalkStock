<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
     >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_fit"
        android:layout_alignParentEnd="true"
        android:scaleType="fitEnd"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="@dimen/value_30dp"
                    android:layout_height="@dimen/value_30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/backk" />
                <com.stalkstock.utils.custom.TitiliumBoldTextView
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Bank Account"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dark_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="vertical">

                <com.stalkstock.utils.custom.TitiliumBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/name_on_account"
                    android:textSize="13sp"
                    android:textColor="@color/light_grey" />
                <com.stalkstock.utils.custom.TitiliumBoldEditText
                    android:id="@+id/etAccountName"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:hint="@string/enter_name_of_account"
                    android:textColorHint="@color/light_grey"
                    android:paddingStart="@dimen/_10sdp"
                    android:inputType="text"
                    android:textSize="13sp"
                    android:textColor="#000"
                    android:background="@drawable/shape_edit_new_home"/>

                <com.stalkstock.utils.custom.TitiliumBoldTextView
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/name_of_bank"
                    android:textSize="13sp"

                    android:textColor="@color/light_grey" />
                <com.stalkstock.utils.custom.TitiliumBoldEditText
                    android:id="@+id/etBankName"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:inputType="text"
                    android:hint="@string/enter_name_of_bank"
                    android:textColorHint="@color/light_grey"
                    android:textSize="13sp"

                    android:textColor="#000"
                    android:background="@drawable/shape_edit_new_home">
                </com.stalkstock.utils.custom.TitiliumBoldEditText>

                <com.stalkstock.utils.custom.TitiliumBoldTextView
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/routing_number"
                    android:textSize="13sp"

                    android:textColor="@color/light_grey" />
                <com.stalkstock.utils.custom.TitiliumBoldEditText
                    android:id="@+id/etRoutingNumber"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:hint="@string/enter_routing_number"
                    android:maxLength="10"
                    android:textColorHint="@color/light_grey"
                    android:textSize="13sp"
                    android:inputType="number"
                    android:textColor="#000"
                    android:background="@drawable/shape_edit_new_home">
                </com.stalkstock.utils.custom.TitiliumBoldEditText>

                <com.stalkstock.utils.custom.TitiliumBoldTextView
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bank_account"
                    android:textSize="13sp"
                    android:textColor="@color/light_grey" />
                <com.stalkstock.utils.custom.TitiliumBoldEditText
                    android:id="@+id/etBankAccount"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:hint="@string/enter_bank_account"
                    android:textSize="13sp"
                    android:maxLength="18"
                    android:textColorHint="@color/light_grey"
                    android:inputType="number"
                    android:textColor="#000"
                    android:background="@drawable/shape_edit_new_home">

                </com.stalkstock.utils.custom.TitiliumBoldEditText>


                <com.stalkstock.utils.custom.TitiliumBoldTextView
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/confirm_bank_account"
                    android:textSize="13sp"
                    android:textColor="@color/light_grey"
                    />


                <com.stalkstock.utils.custom.TitiliumBoldEditText
                    android:id="@+id/etCnfBankAccount"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:textColor="#000"
                    android:textSize="13sp"
                    android:maxLength="18"
                    android:textColorHint="@color/light_grey"
                    android:hint="@string/confirm_bank_account2"
                    android:inputType="number"
                    android:background="@drawable/shape_edit_new_home">
                </com.stalkstock.utils.custom.TitiliumBoldEditText>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp">

                    <com.stalkstock.utils.custom.TitiliumBoldButton
                        android:id="@+id/btnSave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:background="@drawable/buttonshape"
                        android:text="Save"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="16dp" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>