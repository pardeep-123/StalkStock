<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/value_12dp">


    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="VISA CARD"
        android:textSize="@dimen/value_18dp"
        />

    <ImageView
        android:id="@+id/ivSelected"
        android:layout_width="@dimen/value_16dp"
        android:layout_height="@dimen/value_16dp"
        app:layout_constraintTop_toTopOf="@id/tvName"
        app:layout_constraintBottom_toBottomOf="@id/tvName"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/value_2dp"
        android:src="@drawable/radio_fill"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        android:background="@drawable/white_round_corners2"
        android:padding="@dimen/value_10dp"
        android:layout_marginTop="@dimen/value_20dp"
        >



        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="@dimen/value_60dp"
            android:layout_height="@dimen/value_60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/master_card"
            />

        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivIcon"
            android:layout_marginLeft="@dimen/value_10dp"
            android:layout_marginTop="@dimen/value_2dp"
            android:text="**** **** **** ****"
            android:textSize="@dimen/value_14dp"
            />
        <TextView
            android:id="@+id/tvDatePattern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvNumber"
            app:layout_constraintStart_toEndOf="@id/ivIcon"
            android:layout_marginLeft="@dimen/value_10dp"
            android:layout_marginTop="@dimen/value_8dp"
            android:text="MM/YY"
            android:textSize="@dimen/value_14dp"
            />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="@dimen/value_10dp"
            android:layout_marginTop="@dimen/value_8dp"
            android:text="uploaded by"
            android:textSize="@dimen/value_10dp"
            />

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="@dimen/value_16dp"
            android:layout_height="@dimen/value_20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/value_2dp"
            android:src="@drawable/dlt_icon"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>