<?xml version="1.0" encoding="utf-8"?>
 <androidx.cardview.widget.CardView
    android:id="@+id/ca_tv"
    app:cardElevation="@dimen/_2sdp"
    app:cardCornerRadius="@dimen/_12sdp"
    android:layout_margin="@dimen/_20sdp"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

              <ImageView
                  android:layout_marginEnd="@dimen/_10sdp"
                  android:id="@+id/iv_crossi"
                  android:src="@drawable/cross_green"
                  android:layout_alignParentEnd="true"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  />
            <com.stalkstock.utils.custom.TitiliumRegularTextView
                android:layout_below="@id/iv_crossi"
                android:layout_marginStart="@dimen/_10sdp"
                android:id="@+id/tv_order"
                android:textSize="@dimen/value_18sp"
                android:textColor="@color/black"
                android:text="Order ID : ADS777558"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <com.stalkstock.utils.custom.TitiliumRegularTextView
                android:layout_below="@id/iv_crossi"
                android:layout_toStartOf="@id/tv_status"
                android:textColor="@color/black"
                android:text="Status : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <com.stalkstock.utils.custom.TitiliumRegularTextView
                android:layout_below="@id/iv_crossi"
                android:layout_marginEnd="@dimen/_10sdp"
                android:id="@+id/tv_status"
                android:layout_alignParentEnd="true"
                android:textColor="@color/green_colour"
                android:text="@string/completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <RelativeLayout
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:id="@+id/rl"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@id/tv_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_centerVertical="true"
                    android:src="@drawable/subway"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_40sdp"
                    />

                <com.stalkstock.utils.custom.TitiliumRegularTextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/dark_gray"
                    android:text="10:30am, 20 June 2020"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </RelativeLayout>

            <View
                android:layout_marginBottom="@dimen/_10sdp"
                android:id="@+id/line"
                android:layout_below="@id/rl"
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                />

            <LinearLayout
                android:id="@+id/ll_m"
                android:layout_below="@id/line"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout

                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/location1"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            />

                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="9.5 Km"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            />
                        <com.stalkstock.utils.custom.TitiliumRegularTextView
                            android:text="Away"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>
                    <View
                        android:layout_gravity="center"
                        android:background="@color/black"
                        android:layout_width="0.5dp"
                        android:layout_height="@dimen/_40sdp"
                        />
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/dollar"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            />
                        <com.stalkstock.utils.custom.TitiliumBoldTextView
                            android:text="$04.49"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                        <com.stalkstock.utils.custom.TitiliumRegularTextView
                            android:text="Esti. Earn"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    />

                <LinearLayout
                    android:layout_marginStart="@dimen/_25sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/radiobutton"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        />
                    <ImageView
                        android:layout_marginStart="@dimen/_10sdp"
                        android:src="@drawable/subway"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_20sdp"
                        />
                    <com.stalkstock.utils.custom.TitiliumRegularTextView
                        android:layout_gravity="center_vertical"
                        android:textSize="10sp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:text="8753, Mauricio Walks, Mohali Stadium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
                <View
                    android:background="@drawable/line"
                    android:layout_width="@dimen/_68sdp"
                    android:layout_height="@dimen/_25sdp"
                    />

                <LinearLayout
                    android:layout_marginStart="@dimen/_25sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/location_icon"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        app:tint="@color/black"
                        />

                    <com.stalkstock.utils.custom.TitiliumRegularTextView
                        android:textSize="10sp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:textColor="@color/black"
                        android:text="8753, Mauricio Walks, Mohali Stadium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

                <RelativeLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:scaleType="centerCrop"
                        android:src="@drawable/map"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        />
                    <ImageView
                        android:layout_centerInParent="true"
                        android:src="@drawable/location_dam"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        />
                </RelativeLayout>

            </LinearLayout>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@id/ll_m"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/chat_img_1"
                />
              <com.stalkstock.utils.custom.TitiliumBoldTextView
                android:id="@+id/tv_name"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_below="@id/ll_m"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/iv_profile"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="Allen Chander "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                  />
            <com.stalkstock.utils.custom.TitiliumRegularTextView
                android:textSize="12sp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_below="@id/tv_name"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/iv_profile"
                android:textColor="@color/black"
                android:text="8753, Mauricio Walks, Mohali Stadium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <com.stalkstock.utils.custom.TitiliumBoldTextView
                android:id="@+id/tv_rating"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_below="@id/iv_profile"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="Ratings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/iv_profile_user"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@id/tv_rating"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/chat_img_1"
                />
            <com.stalkstock.utils.custom.TitiliumBoldTextView
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/tv_nameuser"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_below="@id/tv_rating"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/iv_profile_user"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="Allen Chander "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <RatingBar
                android:isIndicator="false"
                android:theme="@style/RatingBar"
                android:id="@+id/ratingbar"
                android:layout_marginStart="@dimen/_10sdp"
                android:rating="5"
                android:layout_toEndOf="@id/iv_profile_user"
                android:layout_below="@id/tv_nameuser"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <com.stalkstock.utils.custom.TitiliumRegularTextView
                android:textSize="12sp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_below="@id/tv_nameuser"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/ratingbar"
                android:textColor="@color/black"
                android:text="(5.0)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <com.stalkstock.utils.custom.TitiliumRegularTextView
                android:layout_marginBottom="20dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:textSize="12sp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_below="@id/iv_profile_user"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:text="Lore texts are a way the community can contribute to the mod, by writing and submitting texts for players to find in the game."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>
    </ScrollView>

</androidx.cardview.widget.CardView>