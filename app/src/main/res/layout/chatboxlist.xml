<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginTop="5dp"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:id="@+id/sendchatliner"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:layout_marginLeft="15dp"
                tools:ignore="MissingConstraints">
                <ImageView
                    android:id="@+id/sender_image"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/chat_img"></ImageView>

                <TextView
                    android:id="@+id/chatsendtext"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginRight="165dp"
                    android:paddingLeft="@dimen/_8sdp"
                    android:paddingBottom="5dp"
                    android:text="121355454"

                    android:background="@drawable/chatboxlistshape"
                    android:textColor="#000"
                    android:textSize="14dp"></TextView>

            </LinearLayout>
            <TextView
                android:id="@+id/sendertimer"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12.16 PM"
                android:textSize="14dp"
                android:textColor="#101010"
                android:gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/sendchatliner"></TextView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >



            <LinearLayout
                android:id="@+id/userchatliner"
                android:layout_width="match_parent"
                android:layout_alignParentRight="true"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                tools:ignore="MissingConstraints"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/chattext"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingBottom="5dp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginLeft="165dp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="121355454"
                    android:textDirection="ltr"
                    android:background="@drawable/chatboxrightshape"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textColor="#fff"
                    android:textSize="14dp"></TextView>


                <ImageView
                    android:id="@+id/user_imge"
                    android:layout_weight="0"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="right"
                    android:src="@drawable/chat_img"></ImageView>



            </LinearLayout>
            <TextView
                android:id="@+id/userchattime"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12.15 PM"
                android:textSize="14dp"
                android:textColor="#090909"
                android:gravity="center_horizontal"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/userchatliner"></TextView>

        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>