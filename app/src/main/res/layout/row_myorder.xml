<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:src="@drawable/kfc" />

        <com.stalkstock.utils.custom.TitiliumBoldTextView
            android:id="@+id/kfc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img"
            android:text="KFC"
            android:textColor="@color/black"
            android:textSize="20sp"
              />

        <com.stalkstock.utils.custom.TitiliumRegularTextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kfc"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/img"
            android:text="New York, USA" />

        <com.stalkstock.utils.custom.TitiliumBoldTextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:text=""
            android:textColor="@color/theme_green"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <com.stalkstock.utils.custom.TitiliumRegularTextView
            android:id="@+id/starCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Creamy nachos, Maharaja mac"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <com.stalkstock.utils.custom.TitiliumRegularTextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/starCount"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="01 Feb 2020, 09:30PM" />

        <com.stalkstock.utils.custom.TitiliumBoldTextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="$36.00"
            android:textColor="@android:color/black"
            android:textSize="16sp"
              />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/light_grey" />

</LinearLayout>
